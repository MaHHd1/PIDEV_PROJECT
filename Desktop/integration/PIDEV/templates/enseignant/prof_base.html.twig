{# templates/enseignant/prof_base.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <!-- Header START -->
    <header class="navbar-light navbar-sticky">
        <!-- Logo Nav START -->
        <nav class="navbar navbar-expand-xl">
            <div class="container">
                <!-- Logo START -->
                <a class="navbar-brand" href="{{ path('app_enseignant_dashboard') }}">
                    <img class="light-mode-item navbar-brand-item" src="/assets/images/logo.jpg" alt="logo">
                </a>
                <!-- Logo END -->

                <!-- Responsive navbar toggler -->
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-animation">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                </button>

                <!-- Main navbar START -->
                <div class="navbar-collapse w-100 collapse" id="navbarCollapse">
                    <!-- Nav Main menu START -->
                    <ul class="navbar-nav navbar-nav-scroll mx-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_enseignant_dashboard' %}active{% endif %}" href="{{ path('app_enseignant_dashboard') }}">Tableau de Bord</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_enseignant_mes_cours' %}active{% endif %}" href="#">Mes Cours</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'app_enseignant_liste_etudiants' %}active{% endif %}" href="{{ path('app_enseignant_liste_etudiants') }}">Mes Étudiants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') == 'teacher_quiz_index' %}active{% endif %}" href="{{ path('teacher_quiz_index') }}">Mes Quiz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_evaluation' %}active{% endif %}" href="{{ path('app_evaluation_index') }}">Mes Évaluations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_soumission' %}active{% endif %}" href="{{ path('app_soumission_index') }}">Soumissions</a>
                        </li>
                         <li class="nav-item">
        <a class="nav-link {{ app.request.get('_route') starts with 'app_participation_evenement_index' or app.request.get('_route') starts with 'app_participation_evenement' ? 'active' : '' }}" href="{{ path('app_participation_evenement_index') }}">Événements</a>
    </li>
                        <li class="nav-item">
                            <a class="nav-link {% if app.request.attributes.get('_route') starts with 'app_score' %}active{% endif %}" href="{{ path('app_score_index') }}">Corrections</a>
                        </li>
                    </ul>
                    <!-- Nav Main menu END -->

                    <!-- Nav Search START -->
                    <div class="nav my-3 my-xl-0 px-4 flex-nowrap align-items-center">
                        <div class="nav-item w-100">
                            <form class="position-relative">
                                <input class="form-control pe-5 bg-transparent" type="search" placeholder="Rechercher..." aria-label="Search">
                                <button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
                                    <i class="fas fa-search fs-6 "></i>
                                </button>
                            </form>
                        </div>
                    </div>
                    <!-- Nav Search END -->
                </div>
                <!-- Main navbar END -->

                <!-- Profile START -->
                <div class="dropdown ms-1 ms-lg-0">
                    <a class="avatar avatar-sm p-0" href="#" id="profileDropdown" role="button" data-bs-auto-close="outside" data-bs-display="static" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="avatar-img rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            {{ enseignant.prenom|first|upper }}{{ enseignant.nom|first|upper }}
                        </div>
                    </a>
                    <ul class="dropdown-menu dropdown-animation dropdown-menu-end shadow pt-3" aria-labelledby="profileDropdown">
                        <!-- Profile info -->
                        <li class="px-3 mb-3">
                            <div class="d-flex align-items-center">
                                <!-- Avatar -->
                                <div class="avatar me-3">
                                    <div class="avatar-img rounded-circle shadow bg-primary text-white d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; font-size: 1.5rem;">
                                        {{ enseignant.prenom|first|upper }}{{ enseignant.nom|first|upper }}
                                    </div>
                                </div>
                                <div>
                                    <a class="h6" href="{{ path('app_enseignant_edit_profile') }}">{{ enseignant.prenom }} {{ enseignant.nom }}</a>
                                    <p class="small m-0">{{ enseignant.email }}</p>
                                    <p class="small m-0 text-muted">Enseignant</p>
                                </div>
                            </div>
                        </li>
                        <li> <hr class="dropdown-divider"></li>
                        <!-- Links -->
                        <li><a class="dropdown-item" href="{{ path('app_enseignant_edit_profile') }}"><i class="bi bi-person fa-fw me-2"></i>Mon Profil</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_enseignant_changer_password') }}"><i class="bi bi-key fa-fw me-2"></i>Changer Mot de Passe</a></li>
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear fa-fw me-2"></i>Paramètres</a></li>
                        <li><a class="dropdown-item bg-danger-soft-hover" href="{{ path('app_logout') }}"><i class="bi bi-power fa-fw me-2"></i>Déconnexion</a></li>
                    </ul>
                </div>
                <!-- Profile START -->
            </div>
        </nav>
        <!-- Logo Nav END -->
    </header>
    <!-- Header END -->

    <!-- Page Banner START -->
    <section class="pt-0">
        <div class="container-fluid px-0">
            <div class="card bg-blue h-100px h-md-200px rounded-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            </div>
        </div>
        <div class="container mt-n4">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent card-body pb-0 px-0 mt-2 mt-sm-0">
                        <div class="row d-sm-flex justify-sm-content-between mt-2 mt-md-0">
                            <!-- Avatar -->
                            <div class="col-auto">
                                <div class="avatar avatar-xxl position-relative mt-n3">
                                    <div class="avatar-img rounded-circle border border-white border-3 shadow bg-primary text-white d-flex align-items-center justify-content-center" style="width: 120px; height: 120px; font-size: 3rem;">
                                        {{ enseignant.prenom|first|upper }}{{ enseignant.nom|first|upper }}
                                    </div>
                                    <span class="badge text-bg-success rounded-pill position-absolute top-50 start-100 translate-middle mt-4 mt-md-5 ms-n3 px-md-3">{{ enseignant.diplome }}</span>
                                </div>
                            </div>
                            <!-- Profile info -->
                            <div class="col d-sm-flex justify-content-between align-items-center">
                                <div>
                                    <h1 class="my-1 fs-4">{% block page_title %}{% endblock %}</h1>
                                    <p class="mb-0">{% block page_subtitle %}{% endblock %}</p>
                                </div>
                                <!-- Button -->
                                <div class="mt-2 mt-sm-0">
                                    {% block page_actions %}{% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Advanced filter responsive toggler START -->
                    <hr class="d-xl-none">
                    <div class="col-12 col-xl-3 d-flex justify-content-between align-items-center">
                        <a class="h6 mb-0 fw-bold d-xl-none" href="#">Menu</a>
                        <button class="btn btn-primary d-xl-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                            <i class="fas fa-sliders-h"></i>
                        </button>
                    </div>
                    <!-- Advanced filter responsive toggler END -->
                </div>
            </div>
        </div>
    </section>

    <!-- Page content START -->
    <section class="pt-0">
        <div class="container">
            <div class="row">
                <!-- Left sidebar START -->
                <div class="col-xl-3">
                    <div class="offcanvas-xl offcanvas-end" tabindex="-1" id="offcanvasSidebar">
                        <div class="offcanvas-header bg-light">
                            <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu Enseignant</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#offcanvasSidebar" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body p-3 p-xl-0">
                            <div class="bg-dark border rounded-3 p-3 w-100">
                                <div class="list-group list-group-dark list-group-borderless collapse-list">
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'app_enseignant_dashboard' %}active{% endif %}" href="{{ path('app_enseignant_dashboard') }}">
                                        <i class="bi bi-ui-checks-grid fa-fw me-2"></i>Tableau de bord
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'app_enseignant_mes_cours' %}active{% endif %}" href="#">
                                        <i class="bi bi-basket fa-fw me-2"></i>Mes Cours
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'app_enseignant_liste_etudiants' %}active{% endif %}" href="{{ path('app_enseignant_liste_etudiants') }}">
                                        <i class="bi bi-people fa-fw me-2"></i>Mes Étudiants
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'teacher_quiz_index' %}active{% endif %}" href="{{ path('teacher_quiz_index') }}">
                                        <i class="bi bi-question-diamond fa-fw me-2"></i>Mes Quiz
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') starts with 'app_evaluation' %}active{% endif %}" href="{{ path('app_evaluation_index') }}">
                                        <i class="bi bi-clipboard-check fa-fw me-2"></i>Mes Évaluations
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') starts with 'app_score' %}active{% endif %}" href="{{ path('app_score_index') }}">
                                        <i class="bi bi-star-fill fa-fw me-2"></i>Mes Corrections
                                    </a>
                                     <a class="list-group-item {{ app.request.get('_route') starts with 'app_evenement' or app.request.get('_route') starts with 'app_participation_evenement' ? 'active' : '' }}" href="{{ path('app_participation_evenement_index') }}">
                                            <i class="bi bi-calendar-event fa-fw me-2"></i>Événements
                                        </a>
                                     <a class="list-group-item {{ app.request.get('_route') starts with 'message_inbox' or app.request.get('_route') starts with 'message_inbox' ? 'active' : '' }}" href="{{ path('message_inbox') }}">
                                            <i class="bi bi-calendar-event fa-fw me-2"></i>Messages
                                        </a>
                                        <a class="list-group-item {{ app.request.get('_route') starts with 'forum_list' or app.request.get('_route') starts with 'forum_list' ? 'active' : '' }}" href="{{ path('forum_list') }}">
                                            <i class="bi bi-calendar-event fa-fw me-2"></i>Forums
                                        </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'app_enseignant_revenus' %}active{% endif %}" href="#">
                                        <i class="bi bi-graph-up fa-fw me-2"></i>Revenus
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'app_enseignant_edit_profile' %}active{% endif %}" href="{{ path('app_enseignant_edit_profile') }}">
                                        <i class="bi bi-pencil-square fa-fw me-2"></i>Mon Profil
                                    </a>
                                    <a class="list-group-item {% if app.request.attributes.get('_route') == 'app_enseignant_changer_password' %}active{% endif %}" href="{{ path('app_enseignant_changer_password') }}">
                                        <i class="bi bi-key fa-fw me-2"></i>Changer Mot de Passe
                                    </a>
                                    <a class="list-group-item text-danger bg-danger-soft-hover" href="{{ path('app_logout') }}">
                                        <i class="fas fa-sign-out-alt fa-fw me-2"></i>Déconnexion
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Left sidebar END -->

                <!-- Main content START -->
                <div class="col-xl-9">
                    {% block main_content %}{% endblock %}
                </div>
                <!-- Main content END -->
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .bg-blue {
            background-color: #667eea !important;
        }
        .avatar-xxl {
            width: 120px;
            height: 120px;
        }
        .border-white {
            border-color: #fff !important;
        }
        .h-100px {
            height: 100px;
        }
        @media (min-width: 768px) {
            .h-md-200px {
                height: 200px;
            }
        }
        .list-group-dark .list-group-item {
            background-color: transparent;
            color: #e9ecef;
            border-color: rgba(255, 255, 255, 0.1);
        }
        .list-group-dark .list-group-item:hover,
        .list-group-dark .list-group-item.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }
        .avatar-img {
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
        .bg-danger-soft-hover:hover {
            background-color: rgba(220, 53, 69, 0.1) !important;
        }
    </style>
    {% block additional_styles %}{% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% block additional_javascripts %}{% endblock %}
{% endblock %}