{% extends 'admin/admin_base.html.twig' %}
{% import 'admin/macros/form_errors.html.twig' as form_errors %}

{% block title %}Modifier Module - Administration{% endblock %}

{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 mb-sm-0">Modifier Module</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_admin_modules_list') }}">Modules</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_admin_module_show', {'id': module.id}) }}">{{ module.titreModule }}</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Modifier</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_admin_module_show', {'id': module.id}) }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour au détail
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <!-- Erreurs globales -->
            {{ form_errors.global_errors(form) }}
            
            <div class="row g-3">
                <!-- Informations du Module -->
                <div class="col-12">
                    <h5 class="mb-3">Informations du Module</h5>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        {{ form_label(form.titreModule, 'Titre du Module *') }}
                        {{ form_errors.field_with_errors(form.titreModule) }}
                    </div>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_errors.textarea_with_errors(form.description, 4) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.ordreAffichage, 'Ordre d\'affichage *') }}
                        {{ form_errors.field_with_errors(form.ordreAffichage) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.dureeEstimeeHeures, 'Durée estimée (heures)') }}
                        {{ form_errors.field_with_errors(form.dureeEstimeeHeures) }}
                    </div>
                </div>

                <!-- Boutons -->
                <div class="col-12 mt-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Mettre à jour
                        </button>
                        <a href="{{ path('app_admin_module_show', {'id': module.id}) }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Annuler
                        </a>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
