{% extends 'admin/admin_base.html.twig' %}

{% block title %}Nouveau Module - Administration{% endblock %}

{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 mb-sm-0">Nouveau Module</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_admin_modules_list') }}">Modules</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nouveau Module</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_admin_modules_list') }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-4">
            {% if form.vars.errors|length > 0 %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-exclamation-circle me-2"></i>Erreurs de validation</strong>
                    <ul class="mb-0 mt-2">
                        {% for error in form.vars.errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endif %}
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-3">
                <!-- Informations du Module -->
                <div class="col-12">
                    <h5 class="mb-3">Informations du Module</h5>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        {{ form_label(form.titreModule, 'Titre du Module *') }}
                        {{ form_widget(form.titreModule, {'attr': {'class': 'form-control' ~ (form.titreModule.vars.errors|length > 0 ? ' is-invalid' : ''), 'placeholder': 'Ex: Mathématiques I'}}) }}
                        {% if form.titreModule.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {% for error in form.titreModule.vars.errors %}
                                    <i class="bi bi-exclamation-circle me-1"></i>{{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.errors|length > 0 ? ' is-invalid' : ''), 'rows': '4', 'placeholder': 'Description du module'}}) }}
                        {% if form.description.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {% for error in form.description.vars.errors %}
                                    <i class="bi bi-exclamation-circle me-1"></i>{{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.ordreAffichage, 'Ordre d\'affichage *') }}
                        {{ form_widget(form.ordreAffichage, {'attr': {'class': 'form-control' ~ (form.ordreAffichage.vars.errors|length > 0 ? ' is-invalid' : ''), 'type': 'number'}}) }}
                        {% if form.ordreAffichage.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {% for error in form.ordreAffichage.vars.errors %}
                                    <i class="bi bi-exclamation-circle me-1"></i>{{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(form.dureeEstimeeHeures, 'Durée estimée (heures)') }}
                        {{ form_widget(form.dureeEstimeeHeures, {'attr': {'class': 'form-control' ~ (form.dureeEstimeeHeures.vars.errors|length > 0 ? ' is-invalid' : ''), 'type': 'number'}}) }}
                        {% if form.dureeEstimeeHeures.vars.errors|length > 0 %}
                            <div class="invalid-feedback d-block">
                                {% for error in form.dureeEstimeeHeures.vars.errors %}
                                    <i class="bi bi-exclamation-circle me-1"></i>{{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Boutons -->
                <div class="col-12 mt-4">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save me-1"></i>Enregistrer le Module
                        </button>
                        <a href="{{ path('app_admin_modules_list') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>Annuler
                        </a>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
