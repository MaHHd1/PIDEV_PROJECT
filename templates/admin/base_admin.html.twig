<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin - NovaLearn{% endblock %}</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="{{ asset('assets/images/favicon.ico') }}">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

    {% block stylesheets %}{% endblock %}
</head>
<body>
<!-- Page wrapper -->
<div class="page-wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
        <div class="sidebar-header">
            <a href="{{ path('app_administrateur_dashboard') }}" class="sidebar-brand">
                <img src="{{ asset('assets/images/logo.jpg') }}" alt="Eduport" height="32">
                <span class="sidebar-brand-text">NovaLearn Admin</span>
            </a>
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <div class="sidebar-body">
            {% if app.user %}
                <div class="sidebar-user">
                    <div class="sidebar-user-avatar">
                        <div class="avatar-text">{{ app.user.prenom|first|upper }}{{ app.user.nom|first|upper }}</div>
                    </div>
                    <div class="sidebar-user-info">
                        <h6 class="sidebar-user-name">{{ app.user.prenom }} {{ app.user.nom }}</h6>
                        <span class="sidebar-user-role">Administrateur</span>
                    </div>
                </div>
            {% else %}
                <div class="sidebar-user">
                    <div class="sidebar-user-avatar">
                        <span class="avatar-text">??</span>
                    </div>
                    <div class="sidebar-user-info">
                        <h6 class="sidebar-user-name">Non connecté</h6>
                        <span class="sidebar-user-role">Veuillez vous connecter</span>
                    </div>
                </div>
            {% endif %}

            <ul class="sidebar-nav">
                {% if app.user %}
                    <!-- Dashboard -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_administrateur_dashboard') }}" class="sidebar-link {% if app.request.attributes.get('_route') == 'app_administrateur_dashboard' %}active{% endif %}">
                            <i class="bi bi-speedometer2"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <!-- Utilisateurs -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_administrateur_utilisateurs') }}" class="sidebar-link {% if app.request.attributes.get('_route') starts with 'app_administrateur_utilisateurs' %}active{% endif %}">
                            <i class="bi bi-people"></i>
                            <span>Utilisateurs</span>
                        </a>
                    </li>

                    <!-- Ajouter Utilisateur -->
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link" data-bs-toggle="collapse" data-bs-target="#addUserSubmenu">
                            <i class="bi bi-person-plus"></i>
                            <span>Ajouter Utilisateur</span>
                            <i class="bi bi-chevron-down sidebar-collapse-icon"></i>
                        </a>
                        <div class="collapse" id="addUserSubmenu">
                            <ul class="sidebar-subnav">
                                <li class="sidebar-subitem">
                                    <a href="{{ path('app_etudiant_new') }}" class="sidebar-sublink">
                                        <i class="bi bi-person-vcard"></i>
                                        <span>Nouvel Étudiant</span>
                                    </a>
                                </li>
                                <li class="sidebar-subitem">
                                    <a href="{{ path('app_enseignant_new') }}" class="sidebar-sublink">
                                        <i class="bi bi-person-badge"></i>
                                        <span>Nouvel Enseignant</span>
                                    </a>
                                </li>
                                <li class="sidebar-subitem">
                                    <a href="{{ path('app_administrateur_new') }}" class="sidebar-sublink">
                                        <i class="bi bi-shield-check"></i>
                                        <span>Nouvel Administrateur</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                    <!-- Statistiques Utilisateurs -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_administrateur_statistiques') }}" class="sidebar-link {% if app.request.attributes.get('_route') == 'app_administrateur_statistiques' %}active{% endif %}">
                            <i class="bi bi-bar-chart"></i>
                            <span>Statistiques Utilisateurs</span>
                        </a>
                    </li>

                    <!-- Profile -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_administrateur_profile') }}" class="sidebar-link {% if app.request.attributes.get('_route') == 'app_administrateur_profile' %}active{% endif %}">
                            <i class="bi bi-person-circle"></i>
                            <span>Profile</span>
                        </a>
                    </li>

                    <li class="sidebar-divider"></li>

                    <!-- Site public -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_home') }}" class="sidebar-link">
                            <i class="bi bi-house-door"></i>
                            <span>Site public</span>
                        </a>
                    </li>

                    <!-- Déconnexion -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_logout') }}" class="sidebar-link">
                            <i class="bi bi-box-arrow-right"></i>
                            <span>Déconnexion</span>
                        </a>
                    </li>
                {% else %}
                    <!-- Connexion -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_login') }}" class="sidebar-link">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Connexion</span>
                        </a>
                    </li>

                    <!-- Accueil -->
                    <li class="sidebar-item">
                        <a href="{{ path('app_home') }}" class="sidebar-link">
                            <i class="bi bi-house-door"></i>
                            <span>Accueil</span>
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>

    <!-- Main content -->
    <main class="main-content">
        <!-- Top bar -->
        <nav class="topbar">
            <div class="container-fluid">
                <div class="d-flex align-items-center justify-content-between">
                    <button class="topbar-toggle" id="topbarToggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <div class="topbar-nav">
                        {% if app.user %}
                            <div class="dropdown">
                                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <span class="avatar-text">{{ app.user.prenom|first|upper }}{{ app.user.nom|first|upper }}</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="{{ path('app_administrateur_dashboard') }}"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_administrateur_profile') }}"><i class="bi bi-person-circle me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_home') }}"><i class="bi bi-house-door me-2"></i>Site public</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</a></li>
                                </ul>
                            </div>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-primary btn-sm">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Connexion
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page content -->
        <div class="page-content">
            <div class="container-fluid">
                <!-- Flash messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {% for message in app.flashes('info') %}
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <!-- Main content -->
                {% block admin_content %}{% endblock %}
            </div>
        </div>
    </main>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- PureCounter JS -->
<script src="https://cdn.jsdelivr.net/npm/@srexi/purecounterjs/dist/purecounter_vanilla.js"></script>

<!-- Custom JS -->
<script src="{{ asset('assets/js/script.js') }}"></script>

{% block javascripts %}{% endblock %}

<script>
    // Initialize PureCounter
    new PureCounter();

    // Sidebar toggle
    document.getElementById('sidebarToggle').addEventListener('click', function() {
        document.getElementById('sidebar').classList.toggle('collapsed');
    });

    document.getElementById('topbarToggle').addEventListener('click', function() {
        document.getElementById('sidebar').classList.toggle('collapsed');
    });

    // Auto-collapse other submenus when one opens
    document.querySelectorAll('.sidebar-link[data-bs-toggle="collapse"]').forEach(link => {
        link.addEventListener('click', function(e) {
            if (!this.nextElementSibling.classList.contains('show')) {
                // Close all other open submenus
                document.querySelectorAll('.sidebar-subnav').forEach(subnav => {
                    subnav.classList.remove('show');
                });
            }
        });
    });
</script>
</body>
</html>