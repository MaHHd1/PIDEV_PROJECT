{% extends 'admin/admin_base.html.twig' %}

{% block title %}Mon Profil - Eduport{% endblock %}

{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 mb-sm-0">Mon Profil</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Profil</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_administrateur_dashboard') }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour au Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Colonne gauche : Informations profil -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <div class="text-center">
                        <!-- Avatar -->
                        <div class="avatar avatar-xxl mb-3">
                            <div class="avatar-img rounded-circle bg-purple bg-opacity-10 d-flex align-items-center justify-content-center"
                                 style="width: 120px; height: 120px; font-size: 3rem;">
                                <span class="text-purple fw-bold">
                                    {{ admin.prenom|first|upper }}{{ admin.nom|first|upper }}
                                </span>
                            </div>
                        </div>

                        <!-- Informations -->
                        <h4>{{ admin.prenom }} {{ admin.nom }}</h4>
                        <span class="badge bg-purple mb-3">Administrateur</span>

                        <p class="mb-1">
                            <i class="bi bi-envelope me-2"></i>{{ admin.email }}
                        </p>

                        {% if admin.telephone %}
                            <p class="mb-1">
                                <i class="bi bi-telephone me-2"></i>{{ admin.telephone }}
                            </p>
                        {% endif %}

                        <p class="mb-1">
                            <i class="bi bi-building me-2"></i>{{ admin.departement }}
                        </p>

                        <p class="mb-0">
                            <i class="bi bi-briefcase me-2"></i>{{ admin.fonction }}
                        </p>
                    </div>

                    <hr class="my-4">

                    <!-- Informations système -->
                    <div class="mb-3">
                        <h6 class="mb-3">Informations système</h6>

                        <div class="d-flex justify-content-between mb-2">
                            <span>Date création:</span>
                            <span class="fw-bold">{{ admin.dateCreation|date('d/m/Y H:i') }}</span>
                        </div>

                        {% if admin.dateNomination %}
                            <div class="d-flex justify-content-between mb-2">
                                <span>Date nomination:</span>
                                <span class="fw-bold">{{ admin.dateNomination|date('d/m/Y') }}</span>
                            </div>
                        {% endif %}

                        <div class="d-flex justify-content-between mb-0">
                            <span>Statut:</span>
                            <span class="badge bg-{{ admin.actif ? 'success' : 'secondary' }}">
                                {{ admin.actif ? 'Actif' : 'Inactif' }}
                            </span>
                        </div>
                    </div>

                    <!-- Actions rapides -->
                    <div class="mt-4">
                        <a href="{{ path('app_administrateur_dashboard') }}" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                        <a href="{{ path('app_administrateur_utilisateurs') }}" class="btn btn-outline-primary w-100">
                            <i class="bi bi-people me-2"></i>Gérer utilisateurs
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne droite : Édition du profil -->
        <div class="col-lg-8">
            <!-- Carte 1: Édition du profil -->
            <div class="card shadow mb-4">
                <div class="card-header border-bottom p-4">
                    <h5 class="card-header-title mb-0">Modifier mon profil</h5>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.prenom, 'Prénom') }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.prenom) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.nom, 'Nom') }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.email, 'Email') }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.telephone, 'Téléphone') }}
                                {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.telephone) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.departement, 'Département') }}
                                {{ form_widget(form.departement, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.departement) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.fonction, 'Fonction') }}
                                {{ form_widget(form.fonction, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.fonction) }}
                            </div>
                        </div>

                        <!-- Password field (optional in edit mode) -->
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.motDePasse, 'Nouveau mot de passe') }}
                                {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control', 'placeholder': 'Laisser vide pour ne pas changer'}}) }}
                                <small class="text-muted">Laisser vide pour garder le mot de passe actuel</small>
                                {{ form_errors(form.motDePasse) }}
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Carte 2: Changer mot de passe -->
            <div class="card shadow">
                <div class="card-header border-bottom p-4">
                    <h5 class="card-header-title mb-0">Changer mon mot de passe</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" action="{{ path('app_administrateur_changer_motdepasse') }}" novalidate>
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label class="form-label">Ancien mot de passe</label>
                                    <input type="password" name="ancien_motdepasse" class="form-control">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Nouveau mot de passe</label>
                                    <input type="password" name="nouveau_motdepasse" class="form-control">
                                    <small class="text-muted">Minimum 8 caractères</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Confirmer le mot de passe</label>
                                    <input type="password" name="confirmation_motdepasse" class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-key me-1"></i>Changer le mot de passe
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}