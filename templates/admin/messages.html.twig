<script>
async function loadSummary(id, btn) {
    const spin    = document.getElementById('spin-' + id);
    const icon    = document.getElementById('icon-' + id);
    const box     = document.getElementById('summary-' + id);
    const txt     = document.getElementById('summary-text-' + id);

    // Ã‰tat chargement
    btn.disabled       = true;
    spin.style.display = 'inline-block';
    icon.style.display = 'none';

    try {
        const res  = await fetch(`/messages/${id}/summary`);
        const data = await res.json();

        if (data.error) {
            txt.textContent  = 'âš ï¸ ' + data.error;
            box.style.display = 'block';
            return;
        }

        txt.textContent   = data.summary ?? '';
        box.style.display = 'block';

    } catch (e) {
        txt.textContent   = 'âš ï¸ Impossible de contacter le service IA.';
        box.style.display = 'block';
    } finally {
        btn.disabled       = false;
        spin.style.display = 'none';
        icon.style.display = 'inline';
    }
}
</script>

