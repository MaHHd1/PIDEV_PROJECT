{% extends 'etudiant/student_base.html.twig' %}

{% block title %}Résultats - {{ quiz.titre }} - Novalearn{% endblock %}

{% block student_content %}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('quiz_index') }}">Mes Quiz</a></li>
        <li class="breadcrumb-item"><a href="{{ path('quiz_show', {id: quiz.id}) }}">{{ quiz.titre }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Résultats</li>
    </ol>
</nav>

<!-- Score Summary -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow">
            <div class="card-body text-center p-4">
                <h2 class="mb-3">Quiz Terminé !</h2>
                
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="border rounded p-3">
                            <h5 class="text-muted mb-2">Score</h5>
                            <h2 class="mb-0 {% if score >= 50 %}text-success{% else %}text-danger{% endif %}">
                                {{ score }}%
                            </h2>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3">
                            <h5 class="text-muted mb-2">Points obtenus</h5>
                            <h2 class="mb-0 text-primary">
                                {{ earnedPoints }} / {{ totalPoints }}
                            </h2>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="border rounded p-3">
                            <h5 class="text-muted mb-2">Questions correctes</h5>
                            <h2 class="mb-0 text-info">
                                {% set correctCount = 0 %}
                                {% for result in results %}
                                    {% if result.isCorrect %}
                                        {% set correctCount = correctCount + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {{ correctCount }} / {{ results|length }}
                            </h2>
                        </div>
                    </div>
                </div>

                {% if score >= 80 %}
                    <div class="alert alert-success mt-4 mb-0">
                        <i class="bi bi-trophy-fill me-2"></i>
                        <strong>Excellent travail !</strong> Vous avez très bien réussi ce quiz.
                    </div>
                {% elseif score >= 50 %}
                    <div class="alert alert-info mt-4 mb-0">
                        <i class="bi bi-check-circle me-2"></i>
                        <strong>Bien joué !</strong> Vous avez réussi le quiz.
                    </div>
                {% else %}
                    <div class="alert alert-warning mt-4 mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Continuez vos efforts !</strong> Révisez les questions et réessayez.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<!-- Detailed Results Table -->
<div class="card border-0 shadow">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">
            <i class="bi bi-list-check me-2"></i>Détail des réponses
        </h4>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th width="5%" class="text-center">#</th>
                        <th width="30%">Question</th>
                        <th width="25%">Votre réponse</th>
                        <th width="25%">Réponse correcte</th>
                        <th width="10%" class="text-center">Résultat</th>
                        <th width="5%" class="text-center">Points</th>
                    </tr>
                </thead>
                <tbody>
                    {% for result in results %}
                    <tr class="{% if result.isCorrect %}table-success{% else %}table-danger{% endif %}">
                        <td class="text-center align-middle">
                            <strong>{{ loop.index }}</strong>
                        </td>
                        <td class="align-middle">
                            <strong>{{ result.question.titre ?? 'Question ' ~ loop.index }}</strong>
                            <br>
                            <small class="text-muted">{{ result.question.texte|slice(0, 100) }}...</small>
                        </td>
                        <td class="align-middle">
                            {% if result.studentAnswer %}
                                <span class="badge {% if result.isCorrect %}bg-success{% else %}bg-danger{% endif %} p-2">
                                    {{ result.studentAnswer.texteReponse }}
                                </span>
                            {% else %}
                                <span class="badge bg-secondary p-2">
                                    <i class="bi bi-x-circle me-1"></i>Non répondu
                                </span>
                            {% endif %}
                        </td>
                        <td class="align-middle">
                            {% if result.correctAnswer %}
                                <span class="badge bg-success p-2">
                                    <i class="bi bi-check-circle me-1"></i>
                                    {{ result.correctAnswer.texteReponse }}
                                </span>
                            {% else %}
                                <span class="text-muted">N/A</span>
                            {% endif %}
                        </td>
                        <td class="text-center align-middle">
                            {% if result.isCorrect %}
                                <i class="bi bi-check-circle-fill text-success fs-4"></i>
                            {% else %}
                                <i class="bi bi-x-circle-fill text-danger fs-4"></i>
                            {% endif %}
                        </td>
                        <td class="text-center align-middle">
                            <strong>
                                {% if result.isCorrect %}
                                    <span class="text-success">+{{ result.points }}</span>
                                {% else %}
                                    <span class="text-danger">0</span>
                                {% endif %}
                            </strong>
                        </td>
                    </tr>
                    {% if result.correctAnswer and result.correctAnswer.feedbackSpecifique %}
                    <tr>
                        <td colspan="6" class="bg-light">
                            <div class="alert alert-info mb-0 mx-3 my-2">
                                <i class="bi bi-lightbulb me-2"></i>
                                <strong>Explication :</strong> {{ result.correctAnswer.feedbackSpecifique }}
                            </div>
                        </td>
                    </tr>
                    {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="row mt-4">
    <div class="col-12 text-center">
        <a href="{{ path('quiz_show', {id: quiz.id}) }}" class="btn btn-primary btn-lg me-2">
            <i class="bi bi-arrow-left me-2"></i>Retour au quiz
        </a>
        {% if quiz.nombreTentativesAutorisees is null or quiz.nombreTentativesAutorisees > 1 %}
        <a href="{{ path('quiz_show_complet', {id: quiz.id}) }}" class="btn btn-success btn-lg">
            <i class="bi bi-arrow-repeat me-2"></i>Refaire le quiz
        </a>
        {% endif %}
    </div>
</div>

{% endblock %}