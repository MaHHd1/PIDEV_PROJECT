{% extends 'etudiant/student_base.html.twig' %}

{% block title %}{{ quiz.titre }} - Novalearn{% endblock %}

{% block student_content %}

{# ── Breadcrumb ─────────────────────────────────────────────────────────── #}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('quiz_index') }}">Mes Quiz</a></li>
        <li class="breadcrumb-item active" aria-current="page">{{ quiz.titre }}</li>
    </ol>
</nav>

{# ── Quiz Details Card ───────────────────────────────────────────────────── #}
<div class="card border">
    <div class="card-header border-bottom d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">{{ quiz.titre }}</h3>
        <div class="d-flex align-items-center gap-2">
            {% if quiz.idCours and coursMap is defined and coursMap[quiz.idCours] is defined %}
                <span class="badge bg-primary">
                    <i class="bi bi-book me-1"></i>{{ coursMap[quiz.idCours] }}
                </span>
            {% endif %}
            {% if quiz.typeQuiz %}
                <span class="badge bg-info text-uppercase">{{ quiz.typeQuiz }}</span>
            {% endif %}
        </div>
    </div>

    <div class="card-body">
        {# Description #}
        {% if quiz.description %}
            <p class="mb-4">{{ quiz.description }}</p>
        {% endif %}

        {# Info tiles #}
        <div class="row g-4 mb-4">
            {% if quiz.dureeMinutes %}
            <div class="col-sm-6 col-md-3">
                <div class="d-flex align-items-center">
                    <div class="icon-lg bg-danger bg-opacity-10 text-danger rounded-3 p-3">
                        <i class="fas fa-clock fa-fw"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Durée</h6>
                        <p class="mb-0 small text-muted">{{ quiz.dureeMinutes }} minutes</p>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if quiz.difficulteMoyenne %}
            <div class="col-sm-6 col-md-3">
                <div class="d-flex align-items-center">
                    <div class="icon-lg bg-warning bg-opacity-10 text-warning rounded-3 p-3">
                        <i class="fas fa-signal fa-fw"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Difficulté</h6>
                        <p class="mb-0 small text-muted">{{ quiz.difficulteMoyenne }}/10</p>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if quiz.questions is defined %}
            <div class="col-sm-6 col-md-3">
                <div class="d-flex align-items-center">
                    <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                        <i class="fas fa-question-circle fa-fw"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Questions</h6>
                        <p class="mb-0 small text-muted">{{ quiz.questions|length }}</p>
                    </div>
                </div>
            </div>
            {% endif %}

            <div class="col-sm-6 col-md-3">
                <div class="d-flex align-items-center">
                    <div class="icon-lg bg-success bg-opacity-10 text-success rounded-3 p-3">
                        <i class="fas fa-redo fa-fw"></i>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Tentatives</h6>
                        <p class="mb-0 small text-muted">
                            {{ nbTentatives }}/{% if maxTentatives is not null %}{{ maxTentatives }}{% else %}∞{% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        {# Instructions #}
        {% if quiz.instructions %}
        <div class="alert alert-info mb-4">
            <h6 class="alert-heading"><i class="bi bi-info-circle me-2"></i>Instructions</h6>
            <p class="mb-0">{{ quiz.instructions }}</p>
        </div>
        {% endif %}

        {# Questions preview #}
        {% if quiz.questions is defined and quiz.questions|length > 0 %}
        <div class="card bg-light mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-list me-2"></i>Aperçu des questions ({{ quiz.questions|length }})</h6>
            </div>
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    {% for question in quiz.questions %}
                    <div class="list-group-item d-flex justify-content-between align-items-center bg-transparent px-3 py-2">
                        <div>
                            <span class="fw-semibold me-2">{{ loop.index }}.</span>
                            {{ question.texte|slice(0, 90) }}{% if question.texte|length > 90 %}…{% endif %}
                        </div>
                        {% if question.points %}
                            <span class="badge bg-secondary ms-2">{{ question.points }} pt{{ question.points > 1 ? 's' : '' }}</span>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}

        {# CTA buttons #}
        <div class="text-center">
            <a href="{{ path('quiz_index') }}" class="btn btn-outline-secondary btn-lg me-2">
                <i class="bi bi-arrow-left me-2"></i>Retour
            </a>

            {% if peutPasser %}
                <a href="{{ path('quiz_show_complet', {id: quiz.id}) }}" class="btn btn-success btn-lg">
                    <i class="bi bi-play-circle me-2"></i>
                    {% if nbTentatives > 0 %}Repasser le Quiz{% else %}Commencer le Quiz{% endif %}
                </a>
            {% else %}
                <button class="btn btn-secondary btn-lg" disabled>
                    <i class="bi bi-lock me-2"></i>Tentatives épuisées
                </button>
            {% endif %}
        </div>
    </div>
</div>

{# ══════════════════════════════════════════════════════════════════════════ #}
{# ── Historique des tentatives ────────────────────────────────────────────── #}
{# ══════════════════════════════════════════════════════════════════════════ #}
{% if historique is defined and historique|length > 0 %}
<div class="card border mt-4">
    <div class="card-header border-bottom d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            <i class="fas fa-history me-2 text-primary"></i>Mes tentatives ({{ historique|length }})
        </h5>
        {# Calcul meilleur score côté Twig #}
        {% set bestScore = 0 %}
        {% for r in historique %}
            {% if r.score > bestScore %}{% set bestScore = r.score %}{% endif %}
        {% endfor %}
        <span class="badge bg-success fs-6">
            <i class="fas fa-trophy me-1"></i>Meilleur : {{ bestScore }}%
        </span>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-3">#</th>
                        <th>Date</th>
                        <th>Score</th>
                        <th>Points</th>
                        <th>Résultat</th>
                        <th class="pe-3">Détail</th>
                    </tr>
                </thead>
                <tbody>
                    {% for resultat in historique %}
                    {# ── Ligne principale de la tentative ── #}
                    <tr>
                        <td class="ps-3 text-muted small">
                            Tentative {{ historique|length - loop.index0 }}
                        </td>

                        <td>
                            <span class="small">{{ resultat.datePassation|date('d/m/Y') }}</span><br>
                            <span class="text-muted" style="font-size:.75rem;">{{ resultat.datePassation|date('H:i') }}</span>
                        </td>

                        <td>
                            {% if resultat.score >= 80 %}
                                <span class="badge bg-success fs-6">{{ resultat.score }}%</span>
                            {% elseif resultat.score >= 50 %}
                                <span class="badge bg-warning text-dark fs-6">{{ resultat.score }}%</span>
                            {% else %}
                                <span class="badge bg-danger fs-6">{{ resultat.score }}%</span>
                            {% endif %}
                        </td>

                        <td>
                            <span class="fw-semibold">{{ resultat.earnedPoints }}</span>
                            <span class="text-muted">/ {{ resultat.totalPoints }}</span>
                        </td>

                        <td>
                            {% if resultat.score >= 80 %}
                                <span class="text-success"><i class="fas fa-check-circle me-1"></i>Réussi</span>
                            {% elseif resultat.score >= 50 %}
                                <span class="text-warning"><i class="fas fa-minus-circle me-1"></i>Passable</span>
                            {% else %}
                                <span class="text-danger"><i class="fas fa-times-circle me-1"></i>Échoué</span>
                            {% endif %}
                        </td>

                        <td class="pe-3">
                            <button class="btn btn-sm btn-outline-primary"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#detail-{{ loop.index }}"
                                    aria-expanded="false">
                                <i class="fas fa-eye me-1"></i>Voir
                            </button>
                        </td>
                    </tr>

                    {# ── Ligne expandable : détail question par question ── #}
                    {% if resultat.reponsesEtudiant is defined and resultat.reponsesEtudiant|length > 0 %}
                    <tr>
                        <td colspan="6" class="p-0 bg-light">
                            <div class="collapse" id="detail-{{ loop.index }}">
                                <div class="p-3">
                                    <h6 class="mb-3 text-muted small text-uppercase fw-semibold">
                                        <i class="fas fa-list-alt me-1"></i>
                                        Détail – Tentative {{ historique|length - loop.index0 }}
                                    </h6>

                                    {% for reponse in resultat.reponsesEtudiant %}
                                    <div class="d-flex align-items-start gap-2 py-2 {{ not loop.last ? 'border-bottom' : '' }}">
                                        {# Icône résultat #}
                                        {% if reponse.isCorrect %}
                                            <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                                        {% else %}
                                            <i class="fas fa-times-circle text-danger mt-1 flex-shrink-0"></i>
                                        {% endif %}

                                        <div class="flex-grow-1">
                                            {# Intitulé de la question #}
                                            <p class="mb-1 fw-semibold small">
                                                {{ loop.index }}. {{ reponse.questionTexte }}
                                            </p>

                                            <div class="row g-1 small">
                                                <div class="col-sm-6">
                                                    <span class="text-muted">Votre réponse : </span>
                                                    <span class="{{ reponse.isCorrect ? 'text-success' : 'text-danger' }} fw-semibold">
                                                        {{ reponse.studentAnswer }}
                                                    </span>
                                                </div>
                                                {% if not reponse.isCorrect %}
                                                <div class="col-sm-6">
                                                    <span class="text-muted">Bonne réponse : </span>
                                                    <span class="text-success fw-semibold">
                                                        {{ reponse.correctAnswer }}
                                                    </span>
                                                </div>
                                                {% endif %}
                                            </div>
                                        </div>

                                        {# Points obtenus #}
                                        <span class="badge {{ reponse.isCorrect ? 'bg-success' : 'bg-danger' }} flex-shrink-0">
                                            {{ reponse.isCorrect ? reponse.points : 0 }}/{{ reponse.points }}
                                            pt{{ reponse.points > 1 ? 's' : '' }}
                                        </span>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </td>
                    </tr>
                    {% endif %}

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% if not peutPasser %}
    <div class="card-footer text-center text-muted small">
        <i class="fas fa-lock me-1"></i>
        Nombre maximum de tentatives atteint ({{ maxTentatives }}).
    </div>
    {% endif %}
</div>

{% elseif nbTentatives is defined and nbTentatives == 0 %}
{# Pas encore de tentative #}
<div class="card border mt-4">
    <div class="card-body text-center py-5">
        <i class="fas fa-history fa-3x text-muted mb-3 d-block"></i>
        <h6 class="text-muted">Vous n'avez pas encore passé ce quiz.</h6>
        <p class="small text-muted mb-0">Lancez votre première tentative dès maintenant !</p>
    </div>
</div>
{% endif %}

{% endblock %}