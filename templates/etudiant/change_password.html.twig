{% extends 'etudiant/student_base.html.twig' %}

{% block title %}Changer le mot de passe - Étudiant - Eduport{% endblock %}

{% block student_content %}
    <!-- Card START -->
    <div class="card border">
        <!-- Card header -->
        <div class="card-header border-bottom">
            <h4 class="card-header-title">Changer le mot de passe</h4>
            <p class="mb-0">Assurez-vous d'utiliser un mot de passe sécurisé et unique</p>
        </div>

        <!-- Card body START -->
        <div class="card-body">
            <!-- Flash messages -->
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            <!-- Display form validation errors -->
            <div class="col-12">
                {% if form is defined and form.vars.errors|length > 0 %}
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        {% for error in form.vars.errors %}
                            {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <!-- Password change form -->
            <form method="post" action="{{ path('app_etudiant_change_password') }}" novalidate>
                {{ form_start(form) }}
                <div class="row g-4">
                    <!-- Current Password -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label" for="{{ form.currentPassword.vars.id }}">
                                Mot de passe actuel <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                {{ form_widget(form.currentPassword, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.currentPassword.vars.errors|length > 0 ? ' is-invalid' : ''),
                                        'placeholder': 'Entrez votre mot de passe actuel'
                                    }
                                }) }}
                                <span class="input-group-text cursor-pointer" onclick="togglePassword('{{ form.currentPassword.vars.id }}')">
                                    <i class="bi bi-eye"></i>
                                </span>
                            </div>
                            {% if form.currentPassword.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.currentPassword.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- New Password -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label" for="{{ form.newPassword.first.vars.id }}">
                                Nouveau mot de passe <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                {{ form_widget(form.newPassword.first, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.newPassword.first.vars.errors|length > 0 ? ' is-invalid' : ''),
                                        'placeholder': 'Au moins 8 caractères'
                                    }
                                }) }}
                                <span class="input-group-text cursor-pointer" onclick="togglePassword('{{ form.newPassword.first.vars.id }}')">
                                    <i class="bi bi-eye"></i>
                                </span>
                            </div>
                            {% if form.newPassword.first.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.newPassword.first.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <div class="form-text">
                                Minimum 8 caractères
                            </div>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label" for="{{ form.newPassword.second.vars.id }}">
                                Confirmer le mot de passe <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                {{ form_widget(form.newPassword.second, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.newPassword.second.vars.errors|length > 0 ? ' is-invalid' : ''),
                                        'placeholder': 'Confirmez votre mot de passe'
                                    }
                                }) }}
                                <span class="input-group-text cursor-pointer" onclick="togglePassword('{{ form.newPassword.second.vars.id }}')">
                                    <i class="bi bi-eye"></i>
                                </span>
                            </div>
                            {% if form.newPassword.second.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.newPassword.second.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                            <div class="form-text">
                                Doit correspondre au nouveau mot de passe
                            </div>
                        </div>
                    </div>

                    <!-- Password strength indicator -->
                    <div class="col-md-6">
                        <div class="mb-4">
                            <label class="form-label">Force du mot de passe</label>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar" id="password-strength-bar" role="progressbar" style="width: 0%"></div>
                            </div>
                            <small class="text-muted" id="password-strength-text">Faible</small>
                        </div>
                    </div>

                    <!-- Security tips -->
                    <div class="col-12">
                        <div class="alert alert-info">
                            <h6 class="alert-heading mb-2"><i class="bi bi-shield-check me-2"></i>Conseils pour un mot de passe sécurisé :</h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="mb-0">
                                        <li>Minimum 8 caractères</li>
                                        <li>Majuscules et minuscules</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="mb-0">
                                        <li>Chiffres (0-9)</li>
                                        <li>Caractères spéciaux (@#$%)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Hidden CSRF token -->
                    {{ form_widget(form._token) }}

                    <!-- Buttons -->
                    <div class="col-12">
                        <hr class="my-4">
                        <div class="d-flex justify-content-between">
                            <div>
                                <a href="{{ path('app_etudiant_dashboard') }}" class="btn btn-light me-2">
                                    <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
                                </a>
                                <a href="{{ path('app_etudiant_profile') }}" class="btn btn-outline-primary">
                                    <i class="bi bi-person me-2"></i>Mon profil
                                </a>
                            </div>
                            <div>
                                {{ form_widget(form.submit, {
                                    'attr': {
                                        'class': 'btn btn-primary'
                                    }
                                }) }}
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
        <!-- Card body END -->
    </div>
    <!-- Card END -->

    <!-- Additional security info -->
    <div class="card border mt-4">
        <div class="card-body">
            <h5 class="card-title"><i class="bi bi-shield-lock me-2"></i>Sécurité du compte</h5>
            <p class="card-text">
                Pour la sécurité de votre compte, nous vous recommandons de :
            </p>
            <ul>
                <li>Changer votre mot de passe régulièrement</li>
                <li>Ne jamais partager votre mot de passe</li>
                <li>Utiliser un mot de passe différent pour chaque service</li>
                <li>Vous déconnecter après chaque session sur un ordinateur public</li>
            </ul>
            <div class="alert alert-warning mt-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>Important :</strong> Si vous suspectez une activité suspecte sur votre compte,
                changez immédiatement votre mot de passe et contactez l'administration.
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Toggle password visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Password strength checker
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('{{ form.newPassword.first.vars.id }}');
            const strengthBar = document.getElementById('password-strength-bar');
            const strengthText = document.getElementById('password-strength-text');

            if (passwordInput) {
                passwordInput.addEventListener('input', function() {
                    const password = passwordInput.value;
                    let strength = 0;
                    let text = 'Faible';
                    let color = 'bg-danger';

                    // Check password strength
                    if (password.length >= 8) strength += 25;
                    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength += 25;
                    if (/[0-9]/.test(password)) strength += 25;
                    if (/[^A-Za-z0-9]/.test(password)) strength += 25;

                    // Update strength bar
                    strengthBar.style.width = strength + '%';

                    // Update text and color
                    if (strength >= 75) {
                        text = 'Très fort';
                        color = 'bg-success';
                    } else if (strength >= 50) {
                        text = 'Fort';
                        color = 'bg-info';
                    } else if (strength >= 25) {
                        text = 'Moyen';
                        color = 'bg-warning';
                    }

                    strengthBar.className = 'progress-bar ' + color;
                    strengthText.textContent = text;
                });
            }

            // Form validation - already handled by Symfony, but keep for extra safety
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const currentPassword = document.getElementById('{{ form.currentPassword.vars.id }}');
                    const password = document.getElementById('{{ form.newPassword.first.vars.id }}');
                    const confirmPassword = document.getElementById('{{ form.newPassword.second.vars.id }}');

                    if (currentPassword && password && confirmPassword) {
                        if (!currentPassword.value.trim()) {
                            e.preventDefault();
                            alert('Veuillez entrer votre mot de passe actuel.');
                            return false;
                        }

                        if (password.value !== confirmPassword.value) {
                            e.preventDefault();
                            alert('Les mots de passe ne correspondent pas.');
                            return false;
                        }

                        if (password.value.length < 8) {
                            e.preventDefault();
                            alert('Le mot de passe doit contenir au moins 8 caractères.');
                            return false;
                        }
                    }
                });
            }
        });
    </script>
{% endblock %}