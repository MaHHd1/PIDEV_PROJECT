{% extends 'etudiant/student_base.html.twig' %}

{% block title %}Cours Etudiant{% endblock %}

{% block student_content %}
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                {% if mode == 'discover' %}
                    Catalogue des cours disponibles
                {% else %}
                    Mes cours inscrits
                {% endif %}
                ({{ courses|length }})
            </h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-2 align-items-end mb-3">
                <div class="col-md-6">
                    <label class="form-label mb-1">Recherche</label>
                    <input
                        type="text"
                        name="q"
                        class="form-control"
                        placeholder="Rechercher un cours par titre, code, description..."
                        value="{{ filters.q|default('') }}"
                    >
                </div>
                <div class="col-md-4">
                    <label class="form-label mb-1">Module</label>
                    <select name="module_id" class="form-select">
                        <option value="" {{ (filters.module_id|default('')) == '' ? 'selected' : '' }}>Tous les modules</option>
                        {% for module in modules|default([]) %}
                            <option value="{{ module.id }}" {{ (filters.module_id|default('')) == (module.id ~ '') ? 'selected' : '' }}>
                                {{ module.titreModule }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button class="btn btn-primary w-100">Filtrer</button>
                    {% if mode == 'discover' %}
                        <a href="{{ path('app_etudiant_courses_discover') }}" class="btn btn-outline-secondary">Reset</a>
                    {% else %}
                        <a href="{{ path('app_etudiant_courses') }}" class="btn btn-outline-secondary">Reset</a>
                    {% endif %}
                </div>
            </form>

            {% if courses|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Titre</th>
                                <th>Module</th>
                                <th>Enseignants</th>
                                <th class="text-end">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for c in courses %}
                                <tr>
                                    <td><code>{{ c.codeCours }}</code></td>
                                    <td>{{ c.titre }}</td>
                                    <td>{{ c.module ? c.module.titreModule : '-' }}</td>
                                    <td>
                                        {% if c.enseignants|length > 0 %}
                                            {% for ens in c.enseignants %}{{ ens.nomComplet }}{% if not loop.last %}, {% endif %}{% endfor %}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if mode == 'discover' %}
                                            <form method="post" action="{{ path('app_etudiant_course_enroll', {'id': c.id}) }}" style="display:inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('enroll_course_' ~ c.id) }}">
                                                <button class="btn btn-sm btn-success">S'inscrire</button>
                                            </form>
                                        {% else %}
                                            <a href="{{ path('app_etudiant_course_show', {'id': c.id}) }}" class="btn btn-sm btn-outline-primary">Consulter</a>
                                            <form method="post" action="{{ path('app_etudiant_course_unenroll', {'id': c.id}) }}" style="display:inline" onsubmit="return confirm('Se desinscrire de ce cours ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('unenroll_course_' ~ c.id) }}">
                                                <button class="btn btn-sm btn-outline-danger">Desinscrire</button>
                                            </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% if pagination is defined and pagination.total_pages > 1 %}
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <small class="text-muted">Page {{ pagination.current_page }} / {{ pagination.total_pages }}</small>
                        <div class="btn-group btn-group-sm">
                            {% set prevPage = pagination.current_page > 1 ? pagination.current_page - 1 : 1 %}
                            {% set nextPage = pagination.current_page < pagination.total_pages ? pagination.current_page + 1 : pagination.total_pages %}
                            {% if mode == 'discover' %}
                                <a class="btn btn-outline-secondary {{ pagination.current_page <= 1 ? 'disabled' : '' }}" href="{{ path('app_etudiant_courses_discover', {'page': prevPage, 'q': filters.q|default(''), 'module_id': filters.module_id|default('')}) }}">Precedent</a>
                                <a class="btn btn-outline-secondary {{ pagination.current_page >= pagination.total_pages ? 'disabled' : '' }}" href="{{ path('app_etudiant_courses_discover', {'page': nextPage, 'q': filters.q|default(''), 'module_id': filters.module_id|default('')}) }}">Suivant</a>
                            {% else %}
                                <a class="btn btn-outline-secondary {{ pagination.current_page <= 1 ? 'disabled' : '' }}" href="{{ path('app_etudiant_courses', {'page': prevPage, 'q': filters.q|default(''), 'module_id': filters.module_id|default('')}) }}">Precedent</a>
                                <a class="btn btn-outline-secondary {{ pagination.current_page >= pagination.total_pages ? 'disabled' : '' }}" href="{{ path('app_etudiant_courses', {'page': nextPage, 'q': filters.q|default(''), 'module_id': filters.module_id|default('')}) }}">Suivant</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <p class="text-center text-muted mb-0 py-4">
                    {% if mode == 'discover' %}
                        Aucun cours disponible a l'inscription.
                    {% else %}
                        Vous n'etes inscrit a aucun cours.
                    {% endif %}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}
