{% extends 'enseignant/prof_base.html.twig'%}

{% block main_content %}
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('teacher_quiz_index') }}">Mes Quiz</a></li>
        <li class="breadcrumb-item active" aria-current="page">Nouveau quiz</li>
    </ol>
</nav>

<!-- Main Card START -->
<div class="card border bg-transparent rounded-3 shadow">
    <!-- Card header START -->
    <div class="card-header bg-dark border-bottom px-4 py-3">
        <div class="d-flex align-items-center">
            <div class="icon-lg bg-primary bg-opacity-10 rounded-2 flex-shrink-0 me-3">
                <i class="bi bi-plus-circle fs-3 text-white"></i>
            </div>
            <div>
                <h3 class="card-title mb-0 text-white">
                    <i class="bi bi-plus-circle me-2"></i>Créer un nouveau quiz
                </h3>
                <p class="mb-0 text-white-50 small">Configurez les paramètres de base de votre quiz</p>
            </div>
        </div>
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body p-4">
        {{ form_start(form, {'attr': {'id': 'quiz-form'}}) }}
        
        <!-- Section 1: Informations générales -->
        <div class="form-section mb-4">
            <div class="section-header d-flex align-items-center mb-3 pb-3 border-bottom">
                <span class="badge bg-primary-soft text-primary me-3 fs-6 fw-bold px-3 py-2">01</span>
                <h5 class="mb-0 fw-semibold">Informations générales</h5>
            </div>
            
            <div class="row g-3">
                <!-- Titre -->
                <div class="col-12">
                    {{ form_row(form.titre, {
                        'label': 'Titre du quiz',
                        'label_attr': {'class': 'form-label fw-semibold'},
                        'attr': {
                            'class': 'form-control form-control-lg',
                            'placeholder': 'Ex: Quiz de mathématiques - Niveau 1'
                        }
                    }) }}
                </div>

                <!-- Description -->
                <div class="col-12">
                    {{ form_row(form.description, {
                        'label': 'Description',
                        'label_attr': {'class': 'form-label fw-semibold'},
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Décrivez le contenu et les objectifs de ce quiz...',
                            'rows': 4
                        }
                    }) }}
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Une bonne description aide les étudiants à comprendre le contenu
                    </small>
                </div>
<!-- Cours associé -->
                {% if form.idCours is defined %}
                <div class="col-12">
                    <label for="{{ form.idCours.vars.id }}" class="form-label fw-semibold">
                        <i class="bi bi-book text-primary me-1"></i> Cours associé
                    </label>
                    {{ form_widget(form.idCours, {
                        'attr': {'class': 'form-select form-select-lg'}
                    }) }}
                    {{ form_errors(form.idCours) }}
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-info-circle me-1"></i>
                        Associer ce quiz à un cours le rend accessible aux étudiants inscrits. Laissez vide pour un quiz indépendant.
                    </small>
                </div>
                {% endif %}
                <!-- Type de Quiz (si vous voulez l'afficher) -->
                {% if form.typeQuiz is defined %}
                <div class="col-12">
                    {{ form_row(form.typeQuiz, {
                        'label': 'Type de quiz',
                        'label_attr': {'class': 'form-label fw-semibold'},
                        'attr': {
                            'class': 'form-select'
                        }
                    }) }}
                </div>
                {% endif %}

                <!-- Instructions (si vous voulez l'afficher) -->
                {% if form.instructions is defined %}
                <div class="col-12">
                    {{ form_row(form.instructions, {
                        'label': 'Instructions pour les étudiants',
                        'label_attr': {'class': 'form-label fw-semibold'},
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Consignes spécifiques pour répondre au quiz...',
                            'rows': 3
                        }
                    }) }}
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Section 2: Paramètres du quiz -->
        <div class="form-section mb-4">
            <div class="section-header d-flex align-items-center mb-3 pb-3 border-bottom">
                <span class="badge bg-success-soft text-success me-3 fs-6 fw-bold px-3 py-2">02</span>
                <h5 class="mb-0 fw-semibold">Paramètres du quiz</h5>
            </div>
            
            <div class="row g-3">
                <!-- Durée -->
                <div class="col-md-6">
                    <label for="{{ form.dureeMinutes.vars.id }}" class="form-label fw-semibold">
                        <i class="bi bi-clock text-primary me-1"></i> Durée (en minutes)
                    </label>
                    <div class="input-group">
                        {{ form_widget(form.dureeMinutes, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': '30'
                            }
                        }) }}
                        <span class="input-group-text bg-light">
                            <i class="bi bi-hourglass-split"></i>
                        </span>
                    </div>
                    {{ form_errors(form.dureeMinutes) }}
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-lightbulb text-warning me-1"></i>Laissez vide pour un quiz sans limite de temps
                    </small>
                </div>

                <!-- Tentatives -->
                <div class="col-md-6">
                    <label for="{{ form.nombreTentativesAutorisees.vars.id }}" class="form-label fw-semibold">
                        <i class="bi bi-arrow-repeat text-success me-1"></i> Nombre de tentatives
                    </label>
                    <div class="input-group">
                        {{ form_widget(form.nombreTentativesAutorisees, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': '3'
                            }
                        }) }}
                        <span class="input-group-text bg-light">
                            <i class="bi bi-infinity"></i>
                        </span>
                    </div>
                    {{ form_errors(form.nombreTentativesAutorisees) }}
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-lightbulb text-warning me-1"></i>Laissez vide pour un nombre illimité
                    </small>
                </div>

                <!-- Difficulté (si vous voulez l'afficher) -->
                {% if form.difficulteMoyenne is defined %}
                <div class="col-md-6">
                    {{ form_row(form.difficulteMoyenne, {
                        'label': 'Difficulté moyenne (0-1)',
                        'label_attr': {'class': 'form-label fw-semibold'},
                        'attr': {
                            'class': 'form-control',
                            'placeholder': '0.5'
                        }
                    }) }}
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-info-circle me-1"></i>0 = très facile, 1 = très difficile
                    </small>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Section 3: Disponibilité -->
        <div class="form-section mb-4">
            <div class="section-header d-flex align-items-center mb-3 pb-3 border-bottom">
                <span class="badge bg-warning-soft text-warning me-3 fs-6 fw-bold px-3 py-2">03</span>
                <h5 class="mb-0 fw-semibold">Période de disponibilité</h5>
            </div>
            
            <div class="row g-3">
                <!-- Date début -->
                <div class="col-md-6">
                    <label for="{{ form.dateDebutDisponibilite.vars.id }}" class="form-label fw-semibold">
                        <i class="bi bi-calendar-check text-success me-1"></i> Date de début
                    </label>
                    {{ form_widget(form.dateDebutDisponibilite, {
                        'attr': {
                            'class': 'form-control'
                        }
                    }) }}
                    {{ form_errors(form.dateDebutDisponibilite) }}
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-info-circle me-1"></i>À partir de quand le quiz sera disponible
                    </small>
                </div>

                <!-- Date fin -->
                <div class="col-md-6">
                    <label for="{{ form.dateFinDisponibilite.vars.id }}" class="form-label fw-semibold">
                        <i class="bi bi-calendar-x text-danger me-1"></i> Date de fin
                    </label>
                    {{ form_widget(form.dateFinDisponibilite, {
                        'attr': {
                            'class': 'form-control'
                        }
                    }) }}
                    {{ form_errors(form.dateFinDisponibilite) }}
                    <small class="text-muted d-block mt-1">
                        <i class="bi bi-info-circle me-1"></i>Jusqu'à quand le quiz sera disponible
                    </small>
                </div>
            </div>
        </div>

        

        {{ form_end(form) }}

    </div>
    <!-- Card body END -->

    <!-- Card footer START -->
    <div class="card-footer bg-light border-top p-4">
        <div class="d-flex justify-content-between align-items-center">
            <a href="{{ path('teacher_quiz_index') }}" class="btn btn-secondary-soft mb-0">
                <i class="bi bi-arrow-left me-2"></i>Annuler
            </a>
            <button type="submit" form="quiz-form" class="btn btn-success mb-0">
                <i class="bi bi-check-circle me-2"></i>Créer le quiz
            </button>
        </div>
    </div>
    <!-- Card footer END -->
</div>
<!-- Main Card END -->

<!-- Info Cards Row -->
<div class="row g-4 mt-2">
    <!-- Tips Card -->
    <div class="col-lg-6">
        <div class="card border border-warning rounded-3 h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-start">
                    <div class="icon-lg bg-warning bg-opacity-10 text-warning rounded-2 flex-shrink-0 me-3">
                        <i class="bi bi-lightbulb fs-4"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-3">
                            <i class="bi bi-lightbulb text-warning me-2"></i>Conseils
                        </h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span>Choisissez un titre clair et descriptif</span>
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span>Définissez une durée adaptée à la difficulté</span>
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span>Limitez les tentatives pour encourager la concentration</span>
                            </li>
                            <li class="mb-0">
                                <i class="bi bi-check-circle text-success me-2"></i>
                                <span>Rédigez une description qui motive les étudiants</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Next Steps Card -->
    <div class="col-lg-6">
        <div class="card border border-primary rounded-3 h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-start">
                    <div class="icon-lg bg-primary bg-opacity-10 text-primary rounded-2 flex-shrink-0 me-3">
                        <i class="bi bi-list-check fs-4"></i>
                    </div>
                    <div class="w-100">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-flag text-primary me-2"></i>Prochaines étapes
                        </h5>
                        <div class="d-flex flex-column gap-3">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-primary rounded-circle me-3" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">1</span>
                                <span class="text-dark">Créer le quiz avec les paramètres de base</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-primary bg-opacity-25 text-primary rounded-circle me-3" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">2</span>
                                <span class="text-muted">Ajouter des questions (QCM, Vrai/Faux, Texte)</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <span class="badge bg-primary bg-opacity-25 text-primary rounded-circle me-3" style="width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">3</span>
                                <span class="text-muted">Réviser et publier le quiz</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Custom styles to enhance the design */

/* Badges soft colors */
.bg-primary-soft {
    background-color: rgba(13, 110, 253, 0.1) !important;
}

.bg-success-soft {
    background-color: rgba(25, 135, 84, 0.1) !important;
}

.bg-warning-soft {
    background-color: rgba(255, 193, 7, 0.1) !important;
}

.bg-info-soft {
    background-color: rgba(13, 202, 240, 0.1) !important;
}

/* Form enhancements */
.form-control:focus,
.form-select:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
}

.form-control-lg {
    font-size: 1.1rem;
    padding: 0.75rem 1rem;
}

/* Section spacing */
.form-section {
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 12px;
    transition: all 0.3s ease;
}

.form-section:hover {
    background: #e9ecef;
    transform: translateY(-2px);
}

.section-header .badge {
    font-family: 'Courier New', monospace;
    font-size: 0.95rem !important;
    padding: 0.5rem 0.75rem !important;
}

/* Icon boxes */
.icon-lg {
    width: 3.5rem;
    height: 3.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Input groups */
.input-group-text {
    border: 1px solid #dee2e6;
}

/* Buttons */
.btn {
    font-weight: 500;
    padding: 0.625rem 1.5rem;
    transition: all 0.3s ease;
}

.btn-success {
    background-color: #198754;
    border-color: #198754;
}

.btn-success:hover {
    background-color: #157347;
    border-color: #146c43;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
}

.btn-secondary-soft {
    background-color: #e9ecef;
    border-color: #e9ecef;
    color: #6c757d;
}

.btn-secondary-soft:hover {
    background-color: #dee2e6;
    border-color: #dee2e6;
    color: #495057;
}

/* Card enhancements */
.card {
    transition: all 0.3s ease;
}

.card-header.bg-dark {
    background: linear-gradient(135deg, #1e293b 0%, #334155 100%) !important;
}

/* Info cards */
.card.border-warning {
    border-width: 2px !important;
}

.card.border-primary {
    border-width: 2px !important;
}

/* Small text */
small.text-muted {
    font-size: 0.875rem;
}

/* Error styling */
.invalid-feedback {
    display: block;
    margin-top: 0.25rem;
}

/* Responsive */
@media (max-width: 768px) {
    .card-body {
        padding: 1.5rem !important;
    }
    
    .card-footer {
        padding: 1rem !important;
    }
    
    .form-section {
        padding: 1rem;
    }
    
    .section-header {
        flex-direction: column;
        align-items: flex-start !important;
        gap: 0.5rem;
    }
    
    .d-flex.justify-content-between {
        flex-direction: column;
        gap: 1rem;
    }
    
    .btn {
        width: 100%;
    }
}

/* Animation on load */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.form-section {
    animation: fadeInUp 0.5s ease forwards;
}

.form-section:nth-child(1) { animation-delay: 0.1s; }
.form-section:nth-child(2) { animation-delay: 0.2s; }
.form-section:nth-child(3) { animation-delay: 0.3s; }
.form-section:nth-child(4) { animation-delay: 0.4s; }
</style>
{% endblock %}
