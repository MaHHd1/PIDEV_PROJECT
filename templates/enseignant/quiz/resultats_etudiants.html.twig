{% extends 'enseignant/prof_base.html.twig' %}

{% block main_content %}

{# ── Breadcrumb ── #}
<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('teacher_quiz_index') }}">Mes Quiz</a></li>
        <li class="breadcrumb-item active">Résultats – {{ quiz.titre }}</li>
    </ol>
</nav>

{# ── Header + stats ── #}
<div class="card border bg-transparent rounded-3 mb-4">
    <div class="card-header bg-transparent border-bottom d-flex justify-content-between align-items-center">
        <h3 class="mb-0">
            <i class="fas fa-chart-bar me-2 text-primary"></i>
            Résultats – {{ quiz.titre }}
        </h3>
        <a href="{{ path('teacher_quiz_index') }}" class="btn btn-sm btn-secondary-soft">
            <i class="bi bi-arrow-left me-1"></i>Retour
        </a>
    </div>
    <div class="card-body">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <h3 class="mb-0 text-primary">{{ resultats|length }}</h3>
                <p class="text-muted mb-0 small">Tentatives totales</p>
            </div>
            <div class="col-md-3">
                {% set totalScore = 0 %}
                {% for r in resultats %}{% set totalScore = totalScore + r.score %}{% endfor %}
                <h3 class="mb-0 text-success">
                    {{ resultats|length > 0 ? (totalScore / resultats|length)|round(1) ~ '%' : '—' }}
                </h3>
                <p class="text-muted mb-0 small">Score moyen</p>
            </div>
            <div class="col-md-3">
                {% set reussis = 0 %}
                {% for r in resultats %}{% if r.score >= 50 %}{% set reussis = reussis + 1 %}{% endif %}{% endfor %}
                <h3 class="mb-0 text-warning">{{ reussis }}</h3>
                <p class="text-muted mb-0 small">Réussis (≥ 50%)</p>
            </div>
            <div class="col-md-3">
                <h3 class="mb-0 text-info">{{ quiz.questions|length }}</h3>
                <p class="text-muted mb-0 small">Questions</p>
            </div>
        </div>
    </div>
</div>

{# ── Tableau des résultats ── #}
<div class="card border bg-transparent rounded-3">
    <div class="card-header bg-transparent border-bottom">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Détail des tentatives</h5>
    </div>
    <div class="card-body p-0">
        {% if resultats|length > 0 %}
        <div class="table-responsive">
            <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                <thead>
                    <tr>
                        <th class="border-0 rounded-start">#</th>
                        <th class="border-0">Étudiant</th>
                        <th class="border-0">Date</th>
                        <th class="border-0">Score</th>
                        <th class="border-0">Points</th>
                        <th class="border-0">Résultat</th>
                        <th class="border-0 rounded-end">Détail</th>
                    </tr>
                </thead>
                <tbody>
                    {% for resultat in resultats %}

                    {# Récupérer l'étudiant depuis la map #}
                    {% set etudiant = etudiants[resultat.idEtudiant] ?? null %}

                    <tr>
                        <td class="text-muted small">{{ loop.index }}</td>

                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar avatar-sm me-2 bg-primary bg-opacity-10 rounded text-primary text-center fw-bold"
                                     style="width:36px;height:36px;line-height:36px;">
                                    {% if etudiant %}
                                        {{ etudiant.prenom|first|upper }}{{ etudiant.nom|first|upper }}
                                    {% else %}
                                        ?
                                    {% endif %}
                                </div>
                                <div>
                                    <h6 class="mb-0">
                                        {% if etudiant %}
                                            {{ etudiant.prenom }} {{ etudiant.nom }}
                                        {% else %}
                                            Étudiant #{{ resultat.idEtudiant }}
                                        {% endif %}
                                    </h6>
                                    {% if etudiant %}
                                        <small class="text-muted">{{ etudiant.email }}</small>
                                    {% endif %}
                                </div>
                            </div>
                        </td>

                        <td>
                            {{ resultat.datePassation|date('d/m/Y') }}<br>
                            <small class="text-muted">{{ resultat.datePassation|date('H:i') }}</small>
                        </td>

                        <td>
                            {% if resultat.score >= 80 %}
                                <span class="badge bg-success fs-6">{{ resultat.score }}%</span>
                            {% elseif resultat.score >= 50 %}
                                <span class="badge bg-warning text-dark fs-6">{{ resultat.score }}%</span>
                            {% else %}
                                <span class="badge bg-danger fs-6">{{ resultat.score }}%</span>
                            {% endif %}
                        </td>

                        <td>
                            <span class="fw-semibold">{{ resultat.earnedPoints }}</span>
                            <span class="text-muted">/ {{ resultat.totalPoints }}</span>
                        </td>

                        <td>
                            {% if resultat.score >= 80 %}
                                <span class="text-success"><i class="fas fa-check-circle me-1"></i>Réussi</span>
                            {% elseif resultat.score >= 50 %}
                                <span class="text-warning"><i class="fas fa-minus-circle me-1"></i>Passable</span>
                            {% else %}
                                <span class="text-danger"><i class="fas fa-times-circle me-1"></i>Échoué</span>
                            {% endif %}
                        </td>

                        <td>
                            <button class="btn btn-sm btn-primary-soft"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#detail-{{ loop.index }}"
                                    aria-expanded="false">
                                <i class="fas fa-eye me-1"></i>Voir
                            </button>
                        </td>
                    </tr>

                    {# ── Détail des réponses ── #}
                    {% if resultat.reponsesEtudiant is defined and resultat.reponsesEtudiant|length > 0 %}
                    <tr>
                        <td colspan="7" class="p-0">
                            <div class="collapse" id="detail-{{ loop.index }}">
                                <div class="p-3 bg-light">
                                    <h6 class="mb-3 text-muted small text-uppercase fw-semibold">
                                        <i class="fas fa-list-alt me-1"></i>
                                        Réponses de {% if etudiant %}{{ etudiant.prenom }} {{ etudiant.nom }}{% else %}l'étudiant #{{ resultat.idEtudiant }}{% endif %}
                                    </h6>
                                    {% for reponse in resultat.reponsesEtudiant %}
                                    <div class="d-flex align-items-start gap-2 py-2 {{ not loop.last ? 'border-bottom' : '' }}">
                                        {% if reponse.isCorrect %}
                                            <i class="fas fa-check-circle text-success mt-1 flex-shrink-0"></i>
                                        {% else %}
                                            <i class="fas fa-times-circle text-danger mt-1 flex-shrink-0"></i>
                                        {% endif %}

                                        <div class="flex-grow-1">
                                            <p class="mb-1 fw-semibold small">{{ loop.index }}. {{ reponse.questionTexte }}</p>
                                            <div class="row g-1 small">
                                                <div class="col-sm-6">
                                                    <span class="text-muted">Réponse donnée : </span>
                                                    <span class="{{ reponse.isCorrect ? 'text-success' : 'text-danger' }} fw-semibold">
                                                        {{ reponse.studentAnswer }}
                                                    </span>
                                                </div>
                                                {% if not reponse.isCorrect %}
                                                <div class="col-sm-6">
                                                    <span class="text-muted">Bonne réponse : </span>
                                                    <span class="text-success fw-semibold">{{ reponse.correctAnswer }}</span>
                                                </div>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <span class="badge {{ reponse.isCorrect ? 'bg-success' : 'bg-danger' }} flex-shrink-0">
                                            {{ reponse.isCorrect ? reponse.points : 0 }}/{{ reponse.points }} pt{{ reponse.points > 1 ? 's' : '' }}
                                        </span>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </td>
                    </tr>
                    {% endif %}

                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-5">
            <i class="bi bi-inbox display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">Aucun étudiant n'a encore passé ce quiz.</h5>
        </div>
        {% endif %}
    </div>
</div>

{% endblock %}
