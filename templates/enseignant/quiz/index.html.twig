{% extends 'enseignant/prof_base.html.twig' %}

{% block main_content %}
<!-- Card START -->
<div class="card border bg-transparent rounded-3">
    <!-- Card header START -->
    <div class="card-header bg-transparent border-bottom px-3">
        <div class="row g-4 align-items-center">
            <div class="col-md-2">
                <img src="{{ asset('assets/images/courses/4by3/01.jpg') }}" class="rounded-2" alt="Quiz image">
            </div>
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <a href="#">Mes Quiz</a>
                    </h3>
                    <a href="{{ path('quiz_new') }}" class="btn btn-sm btn-primary mb-0">
                        <i class="bi bi-plus-circle me-1"></i>Nouveau Quiz
                    </a>
                    <a href="{{ path('quiz_ai_generate') }}" class="btn btn-sm btn-warning mb-0">
            <i class="bi bi-stars me-1"></i>Générer avec IA
        </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body p-4">

        <!-- Flash messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <!-- Accordion START -->
        <div class="accordion accordion-icon accordion-bg-light" id="accordionQuizzes">
            {% for quiz in quizzes %}
            <!-- Quiz Item -->
            <div class="accordion-item mb-3">
                <h6 class="accordion-header" id="heading{{ quiz.id }}">
                    <button class="accordion-button rounded collapsed" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapse{{ quiz.id }}"
                            aria-expanded="false"
                            aria-controls="collapse{{ quiz.id }}">
                        <span class="text-secondary fw-bold me-3">{{ '%02d'|format(loop.index) }}</span>
                        <span class="fw-bold">{{ quiz.titre }}</span>
                    </button>
                </h6>
                <div id="collapse{{ quiz.id }}" class="accordion-collapse collapse"
                     aria-labelledby="heading{{ quiz.id }}"
                     data-bs-parent="#accordionQuizzes">
                    <div class="accordion-body mt-3">

                        <!-- Quiz Info -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Description:</strong> {{ quiz.description|default('Aucune description') }}</p>
                                <p class="mb-2"><strong>Durée:</strong> {{ quiz.dureeMinutes ? quiz.dureeMinutes ~ ' minutes' : 'Illimitée' }}</p>
                                <p class="mb-2"><strong>Tentatives:</strong> {{ quiz.nombreTentativesAutorisees|default('Illimitées') }}</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Date création:</strong> {{ quiz.dateCreation ? quiz.dateCreation|date('d/m/Y') : 'N/A' }}</p>
                                <p class="mb-2"><strong>Questions:</strong> {{ quiz.questions|length }}</p>
                                <p class="mb-2"><strong>Correction:</strong> {{ quiz.afficherCorrectionApres|default('Immédiat') }}</p>
                                <p class="mb-2"><strong>Cours associé:</strong> {{ quiz.idCours and coursMap[quiz.idCours] is defined ? coursMap[quiz.idCours] : 'Indépendant' }}</p>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="{{ path('quiz_manage_questions', {id: quiz.id}) }}"
                               class="btn btn-sm btn-primary-soft mb-0">
                                <i class="bi bi-list-check me-1"></i>Gérer les questions
                            </a>

                            <a href="{{ path('quiz_edit', {id: quiz.id}) }}"
                               class="btn btn-sm btn-success-soft mb-0">
                                <i class="bi bi-pencil me-1"></i>Modifier
                            </a>

                           <a href="{{ path('quiz_teacher_resultats', {id: quiz.id}) }}"
   class="btn btn-sm btn-info-soft mb-0">
    <i class="bi bi-bar-chart me-1"></i>Voir résultats
</a>

                            {# ✅ BOUTON EXPORT PDF #}
                            <a href="{{ path('export_teacher_quiz_results_pdf', {id: quiz.id}) }}"
                               class="btn btn-sm btn-danger-soft mb-0"
                               title="Exporter les résultats en PDF">
                                <i class="bi bi-file-pdf me-1"></i>Exporter PDF
                            </a>

                           

                            <!-- Delete form -->
                            <form method="post" action="{{ path('quiz_delete', {id: quiz.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                <button type="submit" class="btn btn-danger-soft btn-sm mb-0"
                                        onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce quiz ?')">
                                    <i class="bi bi-trash me-1"></i>Supprimer
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">Aucun quiz trouvé</h4>
                <p class="text-muted">Commencez par créer votre premier quiz !</p>
                <a href="{{ path('quiz_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Créer un quiz
                </a>
            </div>
            {% endfor %}
        </div>
        <!-- Accordion END -->

        {# ✅ PAGINATION KNPPAGINATOR #}
        {% if quizzes is not empty and quizzes.pageCount is defined %}
        <div class="d-sm-flex justify-content-sm-between align-items-sm-center mt-4">
            <p class="mb-0 text-center text-sm-start text-muted">
                Affichage page {{ quizzes.currentPageNumber }} sur {{ quizzes.pageCount }}
                &nbsp;·&nbsp; {{ quizzes.totalItemCount }} quiz au total
            </p>
            <div>
                {{ knp_pagination_render(quizzes) }}
            </div>
        </div>
        {% endif %}

    </div>
    <!-- Card body END -->
</div>
<!-- Card END -->



<!-- Add quiz modal START -->
<div class="modal fade" id="addQuiz" tabindex="-1" aria-labelledby="addQuizLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white" id="addQuizLabel">
                    <i class="bi bi-plus-circle me-2"></i>Créer un nouveau quiz
                </h5>
                <button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Vous allez être redirigé vers le formulaire de création de quiz complet.</p>
                <div class="text-center">
                    <a href="{{ path('quiz_new') }}" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-2"></i>Accéder au formulaire
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary-soft my-0" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
<!-- Add quiz modal END -->

{% endblock %}
