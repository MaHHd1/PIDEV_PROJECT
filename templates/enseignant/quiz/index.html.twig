{% extends 'enseignant/prof_base.html.twig' %}

{% block main_content %}
<!-- Card START -->
<div class="card border bg-transparent rounded-3">
    <!-- Card header START -->
    <div class="card-header bg-transparent border-bottom px-3">
        <div class="row g-4 align-items-center">
            <div class="col-md-2">
                <img src="{{ asset('assets/images/courses/4by3/01.jpg') }}" class="rounded-2" alt="Quiz image">
            </div>
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <a href="#">Mes Quiz</a>
                    </h3>
                    <a href="{{ path('quiz_new') }}" class="btn btn-sm btn-primary mb-0" data-bs-toggle="modal" data-bs-target="#addQuiz">
                        <i class="bi bi-plus-circle me-1"></i>Nouveau Quiz
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body p-4">
        <!-- Flash messages -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <!-- Accordion START -->
        <div class="accordion accordion-icon accordion-bg-light" id="accordionQuizzes">
            {% for quiz in quizzes %}
            <!-- Quiz Item -->
            <div class="accordion-item mb-3">
                <h6 class="accordion-header" id="heading{{ quiz.id }}">
                    <button class="accordion-button rounded collapsed" type="button" data-bs-toggle="collapse" 
                            data-bs-target="#collapse{{ quiz.id }}" aria-expanded="false" aria-controls="collapse{{ quiz.id }}">
                        <span class="text-secondary fw-bold me-3">{{ '%02d'|format(loop.index) }}</span>
                        <span class="fw-bold">{{ quiz.titre }}</span> 
                    </button>
                </h6>
                <div id="collapse{{ quiz.id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ quiz.id }}" data-bs-parent="#accordionQuizzes">
                    <div class="accordion-body mt-3">
                        <!-- Quiz Info -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Description:</strong> {{ quiz.description|default('Aucune description') }}</p>
                                <p class="mb-2"><strong>Durée:</strong> {{ quiz.dureeMinutes ? quiz.dureeMinutes ~ ' minutes' : 'Illimitée' }}</p>
                                <p class="mb-2"><strong>Tentatives:</strong> {{ quiz.nombreTentativesAutorisees|default('Illimitées') }}</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-2"><strong>Date création:</strong> {{ quiz.dateCreation ? quiz.dateCreation|date('d/m/Y') : 'N/A' }}</p>
                                <p class="mb-2"><strong>Questions:</strong> {{ quiz.questions|length }}</p>
                                <p class="mb-2"><strong>Correction:</strong> {{ quiz.afficherCorrectionApres|default('Immédiat') }}</p>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="{{ path('quiz_manage_questions', {id: quiz.id}) }}" class="btn btn-sm btn-primary-soft mb-0">
                                <i class="bi bi-list-check me-1"></i>Gérer les questions
                            </a>
                            <a href="{{ path('quiz_edit', {id: quiz.id}) }}" class="btn btn-sm btn-success-soft mb-0">
                                <i class="bi bi-pencil me-1"></i>Modifier
                            </a>
                            <a href="{{ path('quiz_show', {id: quiz.id}) }}" class="btn btn-sm btn-info-soft mb-0">
                                <i class="bi bi-eye me-1"></i>Voir
                            </a>
                            
                            <!-- Duplicate form -->
                            <form method="post" action="{{ path('quiz_duplicate', {id: quiz.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('duplicate' ~ quiz.id) }}">
                                <button type="submit" class="btn btn-sm btn-warning-soft mb-0" onclick="return confirm('Voulez-vous vraiment dupliquer ce quiz ?')">
                                    <i class="bi bi-files me-1"></i>Dupliquer
                                </button>
                            </form>
                            
                            <!-- Delete form -->
                            <form method="post" action="{{ path('quiz_delete', {id: quiz.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.id) }}">
                                <button type="submit" class="btn btn-danger-soft btn-sm mb-0" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce quiz ?')">
                                    <i class="bi bi-trash me-1"></i>Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">Aucun quiz trouvé</h4>
                <p class="text-muted">Commencez par créer votre premier quiz !</p>
                <a href="{{ path('quiz_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Créer un quiz
                </a>
            </div>
            {% endfor %}
        </div>
        <!-- Accordion END -->
    </div>
    <!-- Card body END -->
</div>
<!-- Card END -->

<!-- Student quiz results START -->
<div class="card border bg-transparent rounded-3 mt-4">
    <!-- Card header START -->
    <div class="card-header bg-transparent border-bottom">
        <h3 class="mb-0">Résultats des étudiants</h3>
    </div>
    <!-- Card header END -->

    <!-- Card body START -->
    <div class="card-body">
        <!-- Search and select START -->
        <div class="row g-3 align-items-center justify-content-between mb-4">
            <!-- Search -->
            <div class="col-md-8">
                <form class="rounded position-relative">
                    <input class="form-control pe-5 bg-transparent" type="search" placeholder="Rechercher un étudiant..." aria-label="Search">
                    <button class="bg-transparent p-2 position-absolute top-50 end-0 translate-middle-y border-0 text-primary-hover text-reset" type="submit">
                        <i class="fas fa-search fs-6"></i>
                    </button>
                </form>
            </div>

            <!-- Select option -->
            <div class="col-md-3">
                <form>
                    <select class="form-select js-choice border-0 z-index-9 bg-transparent" aria-label="Sort by">
                        <option value="">Trier par</option>
                        <option>Plus récent</option>
                        <option>Meilleur score</option>
                        <option>Plus ancien</option>
                    </select>
                </form>
            </div>
        </div>
        <!-- Search and select END -->

        <!-- Student list table START -->
        <div class="table-responsive border-0">
            <table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
                <!-- Table head -->
                <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Nom étudiant</th>
                        <th scope="col" class="border-0">Nom du quiz</th>
                        <th scope="col" class="border-0">Date</th>
                        <th scope="col" class="border-0">Points</th>
                        <th scope="col" class="border-0 rounded-end">Action</th>
                    </tr>
                </thead>

                <!-- Table body START -->
                <tbody>
                    {% if results is defined and results|length > 0 %}
                        {% for result in results %}
                        <tr>
                            <!-- Table data -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <!-- Image -->
                                    <div class="avatar avatar-sm me-2">
                                        <img src="{{ asset('assets/images/avatar/01.jpg') }}" class="rounded" alt="">
                                    </div>
                                    <div>
                                        <!-- Title -->
                                        <h6 class="mb-0"><a href="#">{{ result.student.nom }} {{ result.student.prenom }}</a></h6>
                                    </div>
                                </div>
                            </td>

                            <!-- Table data -->
                            <td>
                                <h6 class="table-responsive-title mt-2 mt-md-0 mb-0">
                                    <a href="#">{{ result.quiz.titre }}</a>
                                </h6>
                            </td>

                            <!-- Table data -->
                            <td>{{ result.datePassation|date('d/m/Y') }}</td>
                            
                            <!-- Table data -->
                            <td>
                                <span class="badge bg-{{ result.score >= 50 ? 'success' : 'danger' }}">
                                    {{ result.score }}/{{ result.scoreMaximum }}
                                </span>
                            </td>

                            <!-- Table data -->
                            <td>
                                <a href="#" class="btn btn-success-soft btn-round mb-0" data-bs-toggle="tooltip" data-bs-placement="top" title="Message">
                                    <i class="far fa-envelope"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                <i class="bi bi-info-circle me-2"></i>
                                Les résultats des étudiants s'afficheront ici une fois qu'ils auront passé vos quiz
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
                <!-- Table body END -->
            </table>
        </div>
        <!-- Student list table END -->

        <!-- Pagination START -->
        <div class="d-sm-flex justify-content-sm-between align-items-sm-center mt-4 mt-sm-3">
            <!-- Content -->
            <p class="mb-0 text-center text-sm-start">Affichage 1 à 8 sur 20 entrées</p>
            <!-- Pagination -->
            <nav class="d-flex justify-content-center mb-0" aria-label="navigation">
                <ul class="pagination pagination-sm pagination-primary-soft d-inline-block d-md-flex rounded mb-0">
                    <li class="page-item mb-0"><a class="page-link" href="#" tabindex="-1"><i class="fas fa-angle-left"></i></a></li>
                    <li class="page-item mb-0"><a class="page-link" href="#">1</a></li>
                    <li class="page-item mb-0 active"><a class="page-link" href="#">2</a></li>
                    <li class="page-item mb-0"><a class="page-link" href="#">3</a></li>
                    <li class="page-item mb-0"><a class="page-link" href="#"><i class="fas fa-angle-right"></i></a></li>
                </ul>
            </nav>
        </div>
        <!-- Pagination END -->
    </div>
    <!-- Card body END -->
</div>
<!-- Student quiz results END -->

<!-- Add quiz modal START -->
<div class="modal fade" id="addQuiz" tabindex="-1" aria-labelledby="addQuizLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-dark">
                <h5 class="modal-title text-white" id="addQuizLabel">
                    <i class="bi bi-plus-circle me-2"></i>Créer un nouveau quiz
                </h5>
                <button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="modal-body">
                <p class="text-muted">Vous allez être redirigé vers le formulaire de création de quiz complet.</p>
                <div class="text-center">
                    <a href="{{ path('quiz_new') }}" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-2"></i>Accéder au formulaire
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary-soft my-0" data-bs-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
<!-- Add quiz modal END -->
{% endblock %}
