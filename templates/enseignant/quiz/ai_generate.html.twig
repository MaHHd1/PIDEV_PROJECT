{% extends 'enseignant/prof_base.html.twig' %}

{% block main_content %}
<div class="card border bg-transparent rounded-3">

    <div class="card-header bg-transparent border-bottom px-3">
        <div class="row g-4 align-items-center">
            <div class="col-md-2">
                <img src="{{ asset('assets/images/courses/4by3/01.jpg') }}" class="rounded-2" alt="Quiz IA">
            </div>
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">ü§ñ G√©n√©rer un Quiz avec l'IA</h3>
                    <a href="{{ path('teacher_quiz_index') }}" class="btn btn-sm btn-secondary mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Mes Quiz
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">{{ message }}<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show">{{ message }}<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show">{{ error }}<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        {% endif %}

        <div id="saveNotif" style="display:none"></div>

        <!-- Formulaire -->
        <div class="card bg-light border mb-4">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-magic me-2"></i>Param√®tres de g√©n√©ration</h5>
                <form method="post" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mode de g√©n√©ration</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="mode" value="subject" id="modeSubject" {% if selectedCoursId is null %}checked{% endif %}>
                            <label class="form-check-label" for="modeSubject">üìù Par sujet</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="mode" value="document" id="modeDoc">
                            <label class="form-check-label" for="modeDoc">üìÑ Par document de cours (.txt)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="mode" value="cours" id="modeCours" {% if selectedCoursId is not null %}checked{% endif %}>
                            <label class="form-check-label" for="modeCours">üéì Depuis un cours existant</label>
                        </div>
                    </div>

                    <div id="subjectSection" {% if selectedCoursId is not null %}style="display:none"{% endif %}>
                        <div class="mb-3">
                            <label class="form-label">Sujet du quiz</label>
                            <input type="text" name="subject" class="form-control" placeholder="Ex: La photosynth√®se, Les bases de Python...">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Niveau</label>
                            <select name="level" class="form-select">
                                <option value="d√©butant">D√©butant</option>
                                <option value="interm√©diaire" selected>Interm√©diaire</option>
                                <option value="avanc√©">Avanc√©</option>
                            </select>
                        </div>
                    </div>

                    <div id="documentSection" style="display:none">
                        <div class="mb-3">
                            <label class="form-label">Uploader un document (.txt)</label>
                            <input type="file" name="document" class="form-control" accept=".txt">
                        </div>
                    </div>

                    <div id="coursSection" {% if selectedCoursId is not null %}style=""{% else %}style="display:none"{% endif %}>
                        <div class="mb-3">
                            <label class="form-label">S√©lectionner un cours</label>
                            {% if coursList is not empty %}
                                <select name="cours_id" class="form-select">
                                    <option value="">-- Choisir un cours --</option>
                                    {% for cours in coursList %}
                                        <option value="{{ cours.id }}" {% if selectedCoursId == cours.id %}selected{% endif %}>
                                            {{ cours.titre }}
                                        </option>
                                    {% endfor %}
                                </select>
                            {% else %}
                                <div class="alert alert-warning mb-0">Aucun cours disponible.</div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Nombre de questions</label>
                        <select name="nb_questions" class="form-select">
                            <option value="5">5 questions</option>
                            <option value="10">10 questions</option>
                            <option value="15">15 questions</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-stars me-1"></i>G√©n√©rer le Quiz
                    </button>
                </form>
            </div>
        </div>

        <!-- Aper√ßu quiz g√©n√©r√© -->
        {% if quiz %}
        <div class="card border border-warning mb-4">
            <div class="card-header bg-warning bg-opacity-10 d-flex justify-content-between align-items-center">
                <span class="fw-bold">üëÄ Aper√ßu : {{ quiz.title }}</span>
                <span class="badge bg-secondary">{{ quiz.questions|length }} questions</span>
            </div>
            <div class="card-body">

                <div class="alert alert-warning py-2">
                    ‚ö†Ô∏è Ce quiz n'est <strong>pas encore publi√©</strong>. Acceptez-le pour le rendre disponible √† vos √©tudiants.
                </div>

                <div class="accordion accordion-icon accordion-bg-light" id="accordionQuizAI">
                    {% for i, q in quiz.questions %}
                    <div class="accordion-item mb-3">
                        <h6 class="accordion-header" id="headingQ{{ i }}">
                            <button class="accordion-button rounded collapsed" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseQ{{ i }}" aria-expanded="false">
                                <span class="text-secondary fw-bold me-3">{{ '%02d'|format(i + 1) }}</span>
                                <span class="fw-bold">{{ q.question }}</span>
                            </button>
                        </h6>
                        <div id="collapseQ{{ i }}" class="accordion-collapse collapse" data-bs-parent="#accordionQuizAI">
                            <div class="accordion-body mt-2">
                                <ul class="list-group mb-2">
                                    {% for option in q.options %}
                                    <li class="list-group-item {% if option|first == q.correct %}list-group-item-success{% endif %}">
                                        {{ option }}
                                        {% if option|first == q.correct %}
                                            <span class="badge bg-success float-end">‚úÖ Bonne r√©ponse</span>
                                        {% endif %}
                                    </li>
                                    {% endfor %}
                                </ul>
                                {% if q.explanation %}
                                <p class="text-muted mb-0"><small>üí° <em>{{ q.explanation }}</em></small></p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>

                <!-- Boutons Accepter / R√©g√©n√©rer -->
                <div class="d-flex gap-2 mt-4 pt-3 border-top">
                    <button type="button" class="btn btn-success" id="btnAccepter" onclick="accepterQuiz()">
                        <i class="bi bi-check-lg me-1"></i>‚úÖ Accepter & Publier
                    </button>
                    <a href="{{ path('quiz_ai_generate') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise me-1"></i>üîÑ R√©g√©n√©rer
                    </a>
                </div>

            </div>
        </div>
        {% endif %}

    </div>
</div>

<script>
document.querySelectorAll('input[name="mode"]').forEach(r => {
    r.addEventListener('change', function () {
        document.getElementById('subjectSection').style.display  = this.value === 'subject'  ? '' : 'none';
        document.getElementById('documentSection').style.display = this.value === 'document' ? '' : 'none';
        document.getElementById('coursSection').style.display    = this.value === 'cours'    ? '' : 'none';
    });
});

{% if quiz %}
const saveUrl = '{{ saveUrl }}';

// ‚úÖ Payload enrichi avec le cours_id
const quizPayload = Object.assign({}, {{ quiz|json_encode|raw }}, {
    cours_id: {{ selectedCoursId is not null ? selectedCoursId : 'null' }}
});

async function accepterQuiz() {
    const btn = document.getElementById('btnAccepter');
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Publication...';

    try {
        const res  = await fetch(saveUrl, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(quizPayload),
        });
        const json = await res.json();

        const notif = document.getElementById('saveNotif');
        if (json.success) {
            notif.innerHTML = `<div class="alert alert-success alert-dismissible fade show">
                ‚úÖ ${json.message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>`;
            notif.style.display = '';
            btn.innerHTML = '<i class="bi bi-check-lg me-1"></i>Publi√© !';
            btn.classList.replace('btn-success', 'btn-secondary');
            setTimeout(() => location.href = json.editUrl ?? '{{ path('teacher_quiz_index') }}', 1500);
        } else {
            throw new Error(json.error ?? 'Erreur inconnue');
        }
    } catch (e) {
        document.getElementById('saveNotif').innerHTML = `<div class="alert alert-danger">${e.message}</div>`;
        document.getElementById('saveNotif').style.display = '';
        btn.disabled = false;
        btn.innerHTML = '<i class="bi bi-check-lg me-1"></i>‚úÖ Accepter & Publier';
    }
}
{% endif %}
</script>
{% endblock %}
