{% extends 'enseignant/prof_base.html.twig' %}

{% block title %}Liste des Etudiants - Enseignant{% endblock %}

{% block additional_styles %}
    <style>
        .student-avatar {
            width: 50px;
            height: 50px;
            font-size: 1.2rem;
        }
    </style>
{% endblock %}

{% block page_title %}Liste des Etudiants{% endblock %}
{% block page_subtitle %}Etudiants inscrits a vos cours uniquement{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_enseignant_dashboard') }}" class="btn btn-outline-primary mb-0 me-2">
        <i class="fas fa-arrow-left me-1"></i>Retour au dashboard
    </a>
{% endblock %}

{% block main_content %}
    <div class="card border bg-transparent rounded-3 mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label mb-1">Recherche</label>
                    <input
                        type="text"
                        class="form-control"
                        name="q"
                        placeholder="Nom, prenom, email, matricule..."
                        value="{{ filters.q|default('') }}"
                    >
                </div>
                <div class="col-md-4">
                    <label class="form-label mb-1">Cours</label>
                    <select class="form-select" name="cours_id">
                        <option value="0" {{ (filters.cours_id|default(0)) == 0 ? 'selected' : '' }}>Tous mes cours</option>
                        {% for c in cours|default([]) %}
                            <option value="{{ c.id }}" {{ (filters.cours_id|default(0)) == c.id ? 'selected' : '' }}>
                                {{ c.codeCours }} - {{ c.titre }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-2 d-flex gap-2 align-items-end">
                    <button class="btn btn-primary w-100" type="submit">Filtrer</button>
                    <a href="{{ path('app_enseignant_liste_etudiants') }}" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card border bg-transparent rounded-3">
        <div class="card-header bg-transparent border-bottom">
            <div class="d-sm-flex justify-content-sm-between align-items-center">
                <h3 class="mb-2 mb-sm-0">Liste des Etudiants</h3>
                <span class="badge bg-primary">{{ etudiants|length }} etudiants</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive border-0 rounded-3">
                <table class="table table-dark-gray align-middle p-4 mb-0">
                    <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Etudiant</th>
                        <th scope="col" class="border-0">Matricule</th>
                        <th scope="col" class="border-0">Niveau</th>
                        <th scope="col" class="border-0">Specialisation</th>
                        <th scope="col" class="border-0">Statut</th>
                        <th scope="col" class="border-0 rounded-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for etudiant in etudiants %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar student-avatar bg-info d-flex align-items-center justify-content-center rounded-circle me-2">
                                        <span class="text-white">{{ etudiant.prenom|first|upper }}{{ etudiant.nom|first|upper }}</span>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">{{ etudiant.prenom }} {{ etudiant.nom }}</h6>
                                        <small class="text-muted">{{ etudiant.email }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>{{ etudiant.matricule }}</td>
                            <td>{{ etudiant.niveauEtude }}</td>
                            <td>{{ etudiant.specialisation }}</td>
                            <td>
                                {% if etudiant.statut == 'actif' %}
                                    <span class="badge bg-success">Actif</span>
                                {% elseif etudiant.statut == 'inactif' %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% elseif etudiant.statut == 'diplome' %}
                                    <span class="badge bg-info">Diplome</span>
                                {% else %}
                                    <span class="badge bg-warning">{{ etudiant.statut|capitalize }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-info-soft" title="Voir profil">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning-soft" title="Notes">
                                        <i class="fas fa-chart-bar"></i>
                                    </button>
                                    <button class="btn btn-sm btn-primary-soft" title="Contacter">
                                        <i class="fas fa-envelope"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Aucun etudiant trouve pour vos cours.
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% if pagination is defined and pagination.total_pages > 1 %}
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">Page {{ pagination.current_page }} / {{ pagination.total_pages }}</small>
                    <div class="btn-group btn-group-sm">
                        {% set prevPage = pagination.current_page > 1 ? pagination.current_page - 1 : 1 %}
                        {% set nextPage = pagination.current_page < pagination.total_pages ? pagination.current_page + 1 : pagination.total_pages %}
                        <a class="btn btn-outline-secondary {{ pagination.current_page <= 1 ? 'disabled' : '' }}" href="{{ path('app_enseignant_liste_etudiants', {'page': prevPage, 'q': filters.q|default(''), 'cours_id': filters.cours_id|default(0)}) }}">Precedent</a>
                        <a class="btn btn-outline-secondary {{ pagination.current_page >= pagination.total_pages ? 'disabled' : '' }}" href="{{ path('app_enseignant_liste_etudiants', {'page': nextPage, 'q': filters.q|default(''), 'cours_id': filters.cours_id|default(0)}) }}">Suivant</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border bg-success bg-opacity-10 rounded-3 h-100">
                <div class="card-body text-center">
                    <h2 class="text-success">{{ stats.actif|default(0) }}</h2>
                    <p class="mb-0">Etudiants actifs</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border bg-info bg-opacity-10 rounded-3 h-100">
                <div class="card-body text-center">
                    <h2 class="text-info">{{ stats.diplome|default(0) }}</h2>
                    <p class="mb-0">Etudiants diplomes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border bg-warning bg-opacity-10 rounded-3 h-100">
                <div class="card-body text-center">
                    <h2 class="text-warning">{{ stats.inactif|default(0) }}</h2>
                    <p class="mb-0">Etudiants inactifs</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
