{# liste_etudiants.html.twig #}
{% extends 'enseignant/prof_base.html.twig' %}

{% block title %}Liste des Étudiants - Enseignant{% endblock %}

{% block additional_styles %}
    <style>
        .student-avatar {
            width: 50px;
            height: 50px;
            font-size: 1.2rem;
        }
        .table-responsive-title {
            max-width: 200px;
        }
    </style>
{% endblock %}

{% block page_title %}Liste des Étudiants{% endblock %}

{% block page_subtitle %}Gérez et consultez la liste de tous vos étudiants{% endblock %}

{% block page_actions %}
    <a href="{{ path('app_enseignant_dashboard') }}" class="btn btn-outline-primary mb-0 me-2">
        <i class="fas fa-arrow-left me-1"></i>Retour au dashboard
    </a>
{% endblock %}

{% block main_content %}
    <!-- Search and filter START -->
    <div class="card border bg-transparent rounded-3 mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Rechercher un étudiant..." id="searchInput">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select" id="filterCours">
                        <option value="">Tous les cours</option>
                        <option value="algo">Algorithmique</option>
                        <option value="bd">Base de données</option>
                        <option value="web">Programmation Web</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <!-- Search and filter END -->

    <!-- Students table START -->
    <div class="card border bg-transparent rounded-3">
        <div class="card-header bg-transparent border-bottom">
            <div class="d-sm-flex justify-content-sm-between align-items-center">
                <h3 class="mb-2 mb-sm-0">Liste des Étudiants</h3>
                <span class="badge bg-primary">{{ etudiants|length }} étudiants</span>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive border-0 rounded-3">
                <table class="table table-dark-gray align-middle p-4 mb-0">
                    <thead>
                    <tr>
                        <th scope="col" class="border-0 rounded-start">Étudiant</th>
                        <th scope="col" class="border-0">Matricule</th>
                        <th scope="col" class="border-0">Niveau</th>
                        <th scope="col" class="border-0">Spécialisation</th>
                        <th scope="col" class="border-0">Statut</th>
                        <th scope="col" class="border-0 rounded-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for etudiant in etudiants %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar student-avatar bg-info d-flex align-items-center justify-content-center rounded-circle me-2">
                                        <span class="text-white">{{ etudiant.prenom|first|upper }}{{ etudiant.nom|first|upper }}</span>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">{{ etudiant.prenom }} {{ etudiant.nom }}</h6>
                                        <small class="text-muted">{{ etudiant.email }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>{{ etudiant.matricule }}</td>
                            <td>{{ etudiant.niveauEtude }}</td>
                            <td>{{ etudiant.specialisation }}</td>
                            <td>
                                {% if etudiant.statut == 'actif' %}
                                    <span class="badge bg-success">Actif</span>
                                {% elseif etudiant.statut == 'inactif' %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% elseif etudiant.statut == 'diplome' %}
                                    <span class="badge bg-info">Diplômé</span>
                                {% else %}
                                    <span class="badge bg-warning">{{ etudiant.statut|capitalize }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm btn-info-soft" title="Voir profil">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning-soft" title="Notes">
                                        <i class="fas fa-chart-bar"></i>
                                    </button>
                                    <button class="btn btn-sm btn-primary-soft" title="Contacter">
                                        <i class="fas fa-envelope"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Aucun étudiant trouvé.
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if etudiants|length > 10 %}
                <div class="d-sm-flex justify-content-sm-between align-items-sm-center mt-4">
                    <p class="mb-0 text-center text-sm-start">
                        Affichage de 1 à {{ etudiants|length }} sur {{ etudiants|length }} entrées
                    </p>
                    <nav class="d-flex justify-content-center mb-0" aria-label="navigation">
                        <ul class="pagination pagination-sm pagination-primary-soft d-inline-block d-md-flex rounded mb-0">
                            <li class="page-item mb-0"><a class="page-link" href="#" tabindex="-1"><i class="fas fa-angle-left"></i></a></li>
                            <li class="page-item mb-0"><a class="page-link" href="#">1</a></li>
                            <li class="page-item mb-0 active"><a class="page-link" href="#">2</a></li>
                            <li class="page-item mb-0"><a class="page-link" href="#">3</a></li>
                            <li class="page-item mb-0"><a class="page-link" href="#"><i class="fas fa-angle-right"></i></a></li>
                        </ul>
                    </nav>
                </div>
            {% endif %}
        </div>
    </div>
    <!-- Students table END -->

    <!-- Statistics cards START -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border bg-success bg-opacity-10 rounded-3 h-100">
                <div class="card-body text-center">
                    <h2 class="text-success">156</h2>
                    <p class="mb-0">Étudiants actifs</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border bg-info bg-opacity-10 rounded-3 h-100">
                <div class="card-body text-center">
                    <h2 class="text-info">45</h2>
                    <p class="mb-0">Étudiants diplômés</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border bg-warning bg-opacity-10 rounded-3 h-100">
                <div class="card-body text-center">
                    <h2 class="text-warning">12</h2>
                    <p class="mb-0">Étudiants inactifs</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Statistics cards END -->
{% endblock %}

{% block additional_javascripts %}
    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // Filter by course
        document.getElementById('filterCours').addEventListener('change', function() {
            // Implementation depends on your data structure
        });
    </script>
{% endblock %}