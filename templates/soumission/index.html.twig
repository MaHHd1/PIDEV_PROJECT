{% extends '/etudiant/student_base.html.twig' %}


{% block title %}Liste des soumissions{% endblock %}

{% block student_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Liste des soumissions</h1>
    <a href="{{ path('app_soumission_new') }}" class="btn btn-success">
        + Nouvelle soumission
    </a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" placeholder="Rechercher..." value="{{ search }}">
            </div>
            <div class="col-md-3">
                <select name="sort" class="form-control">
                    <option value="dateSoumission" {% if sortBy == 'dateSoumission' %}selected{% endif %}>Date de soumission</option>
                    <option value="idEtudiant" {% if sortBy == 'idEtudiant' %}selected{% endif %}>Étudiant</option>
                    <option value="statut" {% if sortBy == 'statut' %}selected{% endif %}>Statut</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="order" class="form-control">
                    <option value="ASC" {% if order == 'ASC' %}selected{% endif %}>Croissant</option>
                    <option value="DESC" {% if order == 'DESC' %}selected{% endif %}>Décroissant</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-secondary w-100">Filtrer</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Évaluation</th>
                <th>Étudiant</th>
                <th>Date soumission</th>
                <th>Statut</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for soumission in soumissions %}
            <tr>
                <td>{{ soumission.id }}</td>
                <td>{{ soumission.evaluation.titre }}</td>
                <td>{{ soumission.idEtudiant }}</td>
                <td>{{ soumission.dateSoumission|date('d/m/Y H:i') }}</td>
                <td>
                    {% if soumission.statut == 'soumise' %}
                        <span class="badge bg-success">Soumise</span>
                    {% elseif soumission.statut == 'en_retard' %}
                        <span class="badge bg-warning">En retard</span>
                    {% else %}
                        <span class="badge bg-secondary">Non soumise</span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_soumission_show', {'id': soumission.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_soumission_edit', {'id': soumission.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <form method="post" action="{{ path('app_soumission_delete', {'id': soumission.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ soumission.id) }}">
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Supprimer ?');">Supprimer</button>
                    </form>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6" class="text-center">Aucune soumission trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}