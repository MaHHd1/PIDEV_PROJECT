{% extends 'base.html.twig' %}

{% block title %}Participation {{ participation_evenement.id }}{% endblock %}

{% block body %}
<div class="container mt-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded shadow-sm">
        <h3 class="mb-0">Participation #{{ participation_evenement.id }}</h3>

        <div class="btn-group">
            <a href="{{ path('app_participation_evenement_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i>
            </a>

            <a href="{{ path('app_participation_evenement_edit', {'id': participation_evenement.id}) }}" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil"></i>
            </a>

            {{ include('participation_evenement/_delete_form.html.twig', {
                participationEvenement: participation_evenement
            }) }}
        </div>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-body">

            <!-- PARTICIPATION -->
            <div class="row">
                <div class="col-md-6 section-box">
                    <h5>Participation</h5>

                    <table class="table table-sm">
                        <tr>
                            <th>ID</th>
                            <td>{{ participation_evenement.id }}</td>
                        </tr>

                        <tr>
                            <th>Statut</th>
                            <td>
                                <span class="badge
                                {% if participation_evenement.statut.value == 'inscrit' %}bg-primary
                                {% elseif participation_evenement.statut.value == 'present' %}bg-success
                                {% elseif participation_evenement.statut.value == 'absent' %}bg-danger
                                {% else %}bg-warning text-dark{% endif %}">
                                    {{ participation_evenement.statut.value|capitalize }}
                                </span>
                            </td>
                        </tr>

                        <tr>
                            <th>Inscription</th>
                            <td>{{ participation_evenement.dateInscription|date('d/m/Y H:i') }}</td>
                        </tr>

                        <tr>
                            <th>Arrivée</th>
                            <td>{{ participation_evenement.heureArrivee ? participation_evenement.heureArrivee|date('H:i') : '-' }}</td>
                        </tr>

                        <tr>
                            <th>Départ</th>
                            <td>{{ participation_evenement.heureDepart ? participation_evenement.heureDepart|date('H:i') : '-' }}</td>
                        </tr>
                    </table>
                </div>

                <!-- FEEDBACK -->
                <div class="col-md-6 section-box">
                    <h5>Feedback</h5>

                    {% if participation_evenement.feedbackNote %}
                        <div class="rating mb-2">
                            {% for i in 1..5 %}
                                <i class="bi {{ i <= participation_evenement.feedbackNote ? 'bi-star-fill' : 'bi-star' }}"></i>
                            {% endfor %}
                        </div>
                    {% else %}
                        <span class="text-muted">Pas encore noté</span>
                    {% endif %}

                    <div class="mt-3">
                        {{ participation_evenement.feedbackCommentaire ?? 'Aucun commentaire' }}
                    </div>
                </div>
            </div>

            <!-- EVENEMENT -->
            <div class="section-box mt-4">
                <h5><i class="bi bi-calendar-event"></i> Événement</h5>

                {% if participation_evenement.evenement %}
                    <strong>{{ participation_evenement.evenement.titre }}</strong>

                    <p class="text-muted">{{ participation_evenement.evenement.description }}</p>

                    <div class="row">
                        <div class="col-md-6">
                            Début : {{ participation_evenement.evenement.dateDebut|date('d/m/Y H:i') }}
                        </div>
                        <div class="col-md-6">
                            Fin : {{ participation_evenement.evenement.dateFin|date('d/m/Y H:i') }}
                        </div>
                    </div>

                    <a class="btn btn-outline-primary btn-sm mt-2"
                       href="{{ path('app_evenement_show',{'id':participation_evenement.evenement.id}) }}">
                        Voir événement
                    </a>
                {% endif %}
            </div>

            <!-- UTILISATEUR -->
            <div class="section-box mt-4">
                <h5><i class="bi bi-person"></i> Utilisateur</h5>

                {{ participation_evenement.utilisateur.email }}

                {% if participation_evenement.utilisateur.nom %}
                    <div class="badge bg-secondary">
                        {{ participation_evenement.utilisateur.prenom }} {{ participation_evenement.utilisateur.nom }}
                    </div>
                {% endif %}
            </div>

            <!-- CHECK-IN QR -->
            <div class="section-box mt-4">
                <h5><i class="bi bi-qr-code-scan"></i> Check-in QR (temporaire)</h5>
                <p class="text-muted mb-2">
                    Ce QR est temporaire (validite courte). Le scan est autorise uniquement
                    pour le createur de l'evenement ou un admin.
                </p>

                <div class="row align-items-center">
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                        <img src="{{ checkin_qr_url }}" alt="QR Check-in" class="img-fluid border rounded p-2 bg-white">
                    </div>
                    <div class="col-md-8">
                        <div class="alert alert-light border mb-3">
                            <strong>Lien de check-in:</strong><br>
                            <small class="text-break">{{ checkin_url }}</small>
                        </div>
                        <a href="{{ checkin_url }}" class="btn btn-success">
                            <i class="bi bi-check2-circle me-1"></i> Tester le check-in
                        </a>
                        <small class="d-block mt-2 text-muted">
                            Anti-fraude actif: double scan bloque, scan hors plage horaire bloque.
                        </small>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>

.section-box{
    background:white;
    padding:20px;
    border-radius:14px;
    box-shadow:0 3px 10px rgba(0,0,0,.06);
    margin-bottom:20px;
}

.rating i{
    color:#ffc107;
    font-size:1.2rem;
}

.card:hover{
    transform:translateY(-2px);
    transition:.2s;
}

.btn{
    border-radius:8px;
}

.badge{
    padding:6px 10px;
}

</style>

{% endblock %}
