<form method="post" action="{{ path('app_participation_evenement_delete', {'id': participationEvenement.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette participation ? Cette action est irréversible.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ participationEvenement.id) }}">
    <button class="btn btn-danger btn-sm" type="submit">
        <i class="bi bi-trash-fill"></i> Supprimer
    </button>
</form>