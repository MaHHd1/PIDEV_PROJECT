{% extends 'base.html.twig' %}

{% block title %}Modifier Participation{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-sm border-0 p-4">
                <h3 class="mb-4 text-center">Modifier la participation #{{ participation_evenement.id }}</h3>

                <form method="post" novalidate>
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.evenement, 'Événement', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.evenement, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.evenement) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.utilisateur, 'Utilisateur', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.utilisateur, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.utilisateur) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.statut, {'attr': {'class': 'form-select'}}) }}
                        {{ form_errors(form.statut) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.dateInscription, 'Date d\'inscription', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.dateInscription, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.dateInscription) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.heureArrivee, 'Heure d\'arrivée', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.heureArrivee, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.heureArrivee) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.heureDepart, 'Heure de départ', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.heureDepart, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.heureDepart) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.feedbackNote, 'Note', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.feedbackNote, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.feedbackNote) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.feedbackCommentaire, 'Commentaire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                        {{ form_widget(form.feedbackCommentaire, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                        {{ form_errors(form.feedbackCommentaire) }}
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_participation_evenement_index') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Mettre à jour
                            </button>
                            {{ include('participation_evenement/_delete_form.html.twig', {
                                participationEvenement: participation_evenement
                            }) }}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </form>
            </div>

        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    h3 {
        font-weight: 600;
        color: #343a40;
    }
    .form-label {
        font-size: 0.95rem;
    }
    .form-control, .form-select {
        border-radius: 8px;
        box-shadow: none;
    }
    .btn {
        border-radius: 8px;
        padding: 6px 16px;
    }
</style>
{% endblock %}
