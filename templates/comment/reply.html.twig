{% extends 'base.html.twig' %}
{% block title %}Reply{% endblock %}

{% block body %}
<h3 class="mb-3">↩ Reply à un commentaire</h3>

<div class="card mb-3">
  <div class="card-body">
    <b>{{ parent.utilisateur.username }}</b>
    <span class="text-muted">• {{ parent.datePublication|date('Y-m-d H:i') }}</span>
    <div class="mt-2">{{ parent.contenu|nl2br }}</div>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    {{ form_start(form) }}
      {{ form_row(form.contenu) }}
      <button class="btn btn-success">Répondre</button>
    {{ form_end(form) }}
  </div>
</div>

<a class="btn btn-link mt-3" href="{{ path('forum_show', {id: parent.forum.id, u: activeUser.id}) }}">← Retour</a>
{% endblock %}
