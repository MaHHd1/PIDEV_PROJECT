{# templates/score/_content.html.twig #}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>{{ user_type == 'enseignant' ? 'Liste des scores' : 'Mes notes' }}</h1>
    {% if user_type == 'enseignant' %}
        <a href="{{ path('app_score_new') }}" class="btn btn-warning">
            <i class="bi bi-plus-circle"></i> Nouveau score
        </a>
    {% endif %}
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" name="search" class="form-control" 
                       placeholder="Rechercher par étudiant, évaluation..." 
                       value="{{ search }}">
            </div>
            <div class="col-md-3">
                <select name="sort" class="form-control">
                    <option value="dateCorrection" {% if sortBy == 'dateCorrection' %}selected{% endif %}>Date de correction</option>
                    <option value="noteObtenue" {% if sortBy == 'noteObtenue' %}selected{% endif %}>Note</option>
                    <option value="statutCorrection" {% if sortBy == 'statutCorrection' %}selected{% endif %}>Statut</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="order" class="form-control">
                    <option value="ASC" {% if order == 'ASC' %}selected{% endif %}>Croissant</option>
                    <option value="DESC" {% if order == 'DESC' %}selected{% endif %}>Décroissant</option>
                </select>
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-secondary w-100">Filtrer</button>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Évaluation</th>
                {% if user_type == 'enseignant' %}
                    <th>Étudiant</th>
                {% endif %}
                <th>Note obtenue</th>
                <th>Pourcentage</th>
                <th>Statut</th>
                <th>Date correction</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for score in scores %}
            <tr>
                <td>{{ score.id }}</td>
                <td>
                    <strong>{{ score.soumission.evaluation.titre }}</strong>
                    <br>
                    <small class="text-muted">{{ score.soumission.evaluation.typeEvaluation }}</small>
                </td>
                {% if user_type == 'enseignant' %}
                    <td>Étudiant #{{ score.soumission.idEtudiant }}</td>
                {% endif %}
                <td>
                    <strong class="text-primary">{{ score.noteObtenue }}/{{ score.soumission.evaluation.noteMax }}</strong>
                </td>
                <td>
                    {% set pourcentage = (score.noteObtenue / score.soumission.evaluation.noteMax * 100)|round %}
                    <span class="badge {% if pourcentage >= 50 %}bg-success{% else %}bg-danger{% endif %}">
                        {{ pourcentage }}%
                    </span>
                </td>
                <td>
                    {% if score.statutCorrection == 'corrige' %}
                        <span class="badge bg-success">Corrigé</span>
                    {% else %}
                        <span class="badge bg-warning">En cours</span>
                    {% endif %}
                </td>
                <td>{{ score.dateCorrection|date('d/m/Y H:i') }}</td>
                <td>
                    <a href="{{ path('app_score_show', {'id': score.id}) }}" 
                       class="btn btn-sm btn-info">
                        <i class="bi bi-eye"></i> Voir
                    </a>
                    {% if user_type == 'enseignant' %}
                        <a href="{{ path('app_score_edit', {'id': score.id}) }}" 
                           class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <form method="post" action="{{ path('app_score_delete', {'id': score.id}) }}" 
                              style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ score.id) }}">
                            <button class="btn btn-sm btn-danger" 
                                    onclick="return confirm('Supprimer ce score ?');">
                                <i class="bi bi-trash"></i> Supprimer
                            </button>
                        </form>
                    {% endif %}
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="{{ user_type == 'enseignant' ? '8' : '7' }}" class="text-center">
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        {{ user_type == 'enseignant' ? 'Aucun score trouvé' : 'Aucune note disponible pour le moment' }}
                    </div>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>