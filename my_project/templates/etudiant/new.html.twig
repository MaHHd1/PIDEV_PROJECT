{% extends 'base.html.twig' %}

{% block title %}Nouvel Étudiant{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Créer un Nouvel Étudiant</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.prenom) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.motDePasse) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.matricule) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.dateNaissance) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.niveauEtude) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.specialisation) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.telephone) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.statut) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.adresse) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_etudiant_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}