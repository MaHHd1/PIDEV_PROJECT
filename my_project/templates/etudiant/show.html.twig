{% extends 'base.html.twig' %}

{% block title %}Détails Étudiant{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-user"></i> Détails de l'Étudiant</h4>
                    <span class="badge bg-{{ etudiant.statut == 'actif' ? 'success' : 'secondary' }}">
                    {{ etudiant.statut|upper }}
                </span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Matricule</h6>
                            <p class="h5">{{ etudiant.matricule }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Nom Complet</h6>
                            <p class="h5">{{ etudiant.nomComplet }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Email</h6>
                            <p>{{ etudiant.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Téléphone</h6>
                            <p>{{ etudiant.telephone }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Date de Naissance</h6>
                            <p>{{ etudiant.dateNaissance|date('d/m/Y') }} ({{ etudiant.age }} ans)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Date d'Inscription</h6>
                            <p>{{ etudiant.dateInscription|date('d/m/Y H:i') }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Niveau d'Étude</h6>
                            <p>{{ etudiant.niveauEtude }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Spécialisation</h6>
                            <p>{{ etudiant.specialisation }}</p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h6 class="text-muted">Adresse</h6>
                        <p>{{ etudiant.adresse }}</p>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_etudiant_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <div>
                            <a href="{{ path('app_etudiant_edit', {'id': etudiant.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post"
                                  action="{{ path('app_etudiant_delete', {'id': etudiant.id}) }}"
                                  style="display:inline-block;"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etudiant.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}