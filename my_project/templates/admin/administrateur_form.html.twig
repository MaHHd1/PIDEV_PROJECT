{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <h1 class="h3 mb-2 mb-sm-0">
                    {% if is_edit %}Modifier l'Administrateur{% else %}Nouvel Administrateur{% endif %}
                </h1>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_administrateur_utilisateurs') }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-4">
            {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-6">
                    {{ form_row(form.nom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.prenom) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.telephone) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.departement) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.fonction) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.dateNomination) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.motDePasse) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.actif) }}
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>
                    {% if is_edit %}Mettre à jour{% else %}Créer{% endif %}
                </button>
                <a href="{{ path('app_administrateur_utilisateurs') }}" class="btn btn-light ms-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}