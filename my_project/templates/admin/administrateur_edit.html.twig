{% extends 'admin/admin_base.html.twig' %}

{% block title %}Modifier Administrateur - Eduport{% endblock %}

{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 mb-sm-0">Modifier l'Administrateur</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_utilisateurs') }}">Utilisateurs</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Modifier {{ administrateur.prenom }} {{ administrateur.nom }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_administrateur_utilisateurs') }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-4">
            {{ form_start(form) }}
            <div class="row g-3">
                <!-- Informations personnelles -->
                <div class="col-12">
                    <h5 class="mb-3">Informations personnelles</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Prénom *</label>
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nom *</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Email *</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email@exemple.com', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Téléphone</label>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+33 1 23 45 67 89'}}) }}
                    </div>
                </div>

                <!-- Informations professionnelles -->
                <div class="col-12 mt-4">
                    <h5 class="mb-3">Informations professionnelles</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Département *</label>
                        {{ form_widget(form.departement, {'attr': {'class': 'form-control', 'placeholder': 'Département', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Fonction *</label>
                        {{ form_widget(form.fonction, {'attr': {'class': 'form-control', 'placeholder': 'Fonction', 'required': true}}) }}
                    </div>
                </div>

                {#
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Date de nomination</label>
                        {{ form_widget(form.dateNomination, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                #}

                <!-- Statut et sécurité -->
                <div class="col-12 mt-4">
                    <h5 class="mb-3">Statut et sécurité</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Statut</label>
                        <div class="form-check form-switch">
                            {{ form_widget(form.actif, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                            <label class="form-check-label" for="{{ form.actif.vars.id }}">
                                {{ administrateur.actif ? 'Actif' : 'Inactif' }}
                            </label>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nouveau mot de passe</label>
                        {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control', 'placeholder': 'Laisser vide pour ne pas changer'}}) }}
                        <small class="text-muted">Laisser vide pour garder le mot de passe actuel</small>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>Mettre à jour
                </button>
                <a href="{{ path('app_administrateur_utilisateur_show', {'type': 'administrateur', 'id': administrateur.id}) }}" class="btn btn-light ms-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
