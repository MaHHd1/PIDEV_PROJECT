{% extends 'admin/admin_base.html.twig' %}

{% block title %}Modifier Enseignant - Eduport{% endblock %}

{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 mb-sm-0">Modifier l'Enseignant</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_utilisateurs') }}">Utilisateurs</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Modifier {{ enseignant.prenom }} {{ enseignant.nom }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_administrateur_utilisateurs') }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-4">
            {{ form_start(form) }}
            <div class="row g-3">
                <!-- Informations personnelles -->
                <div class="col-12">
                    <h5 class="mb-3">Informations personnelles</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Prénom *</label>
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nom *</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Email *</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email@exemple.com', 'required': true}}) }}
                    </div>
                </div>

                <!-- REMOVED: telephone field (doesn't exist in EnseignantType) -->
                <!-- REMOVED: dateNaissance field (doesn't exist in EnseignantType) -->

                <!-- Informations professionnelles -->
                <div class="col-12 mt-4">
                    <h5 class="mb-3">Informations professionnelles</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Matricule Enseignant *</label>
                        {{ form_widget(form.matriculeEnseignant, {'attr': {'class': 'form-control', 'placeholder': 'ENS2024001', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Diplôme *</label>
                        {{ form_widget(form.diplome, {'attr': {'class': 'form-control', 'placeholder': 'Diplôme obtenu', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Spécialité *</label>
                        {{ form_widget(form.specialite, {'attr': {'class': 'form-control', 'placeholder': 'Spécialité', 'required': true}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Années d'expérience</label>
                        {{ form_widget(form.anneesExperience, {'attr': {'class': 'form-control', 'placeholder': '0'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Type de contrat</label>
                        {{ form_widget(form.typeContrat, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Taux horaire (€)</label>
                        {{ form_widget(form.tauxHoraire, {'attr': {'class': 'form-control', 'placeholder': '0.00'}}) }}
                    </div>
                </div>

                <div class="col-12">
                    <div class="mb-3">
                        <label class="form-label">Disponibilités</label>
                        {{ form_widget(form.disponibilites, {'attr': {'class': 'form-control', 'placeholder': 'Disponibilités', 'rows': 3}}) }}
                    </div>
                </div>

                <!-- Statut et sécurité -->
                <div class="col-12 mt-4">
                    <h5 class="mb-3">Statut et sécurité</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Statut</label>
                        {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nouveau mot de passe</label>
                        {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control', 'placeholder': 'Laisser vide pour ne pas changer'}}) }}
                        <small class="text-muted">Laisser vide pour garder le mot de passe actuel</small>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-check-circle me-1"></i>Mettre à jour
                </button>
                <a href="{{ path('app_administrateur_utilisateur_show', {'type': 'enseignant', 'id': enseignant.id}) }}" class="btn btn-light ms-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}