{% extends 'admin/admin_base.html.twig' %}

{% block title %}Modifier Étudiant - Eduport{% endblock %}

{% block admin_content %}
    <!-- Title -->
    <div class="row">
        <div class="col-12 mb-3">
            <div class="d-sm-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-2 mb-sm-0">Modifier l'Étudiant</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_dashboard') }}">Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="{{ path('app_administrateur_utilisateurs') }}">Utilisateurs</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Modifier {{ etudiant.prenom }} {{ etudiant.nom }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-grid d-sm-block">
                    <a href="{{ path('app_administrateur_utilisateurs') }}" class="btn btn-sm btn-primary-soft mb-0">
                        <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-4">
            {{ form_start(form) }}
            <div class="row g-3">
                <!-- Informations personnelles -->
                <div class="col-12">
                    <h5 class="mb-3">Informations personnelles</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Prénom *</label>
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom', 'required': true}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nom *</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom', 'required': true}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Email *</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'email@exemple.com', 'required': true}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Téléphone</label>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+33 1 23 45 67 89'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Date de naissance</label>
                        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Adresse</label>
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse complète'}}) }}
                    </div>
                </div>

                <!-- Informations académiques -->
                <div class="col-12 mt-4">
                    <h5 class="mb-3">Informations académiques</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Matricule *</label>
                        {{ form_widget(form.matricule, {'attr': {'class': 'form-control', 'placeholder': 'ETU2024001', 'required': true}}) }}
                        {{ form_errors(form.matricule) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Niveau d'étude</label>
                        {{ form_widget(form.niveauEtude, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Spécialisation</label>
                        {{ form_widget(form.specialisation, {'attr': {'class': 'form-control', 'placeholder': 'Spécialisation'}}) }}
                    </div>
                </div>

                {#
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Date d'inscription</label>
                        {{ form_widget(form.dateInscription, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                #}

                <!-- Statut et sécurité -->
                <div class="col-12 mt-4">
                    <h5 class="mb-3">Statut et sécurité</h5>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Statut</label>
                        {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Nouveau mot de passe</label>
                        {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control', 'placeholder': 'Laisser vide pour ne pas changer'}}) }}
                        <small class="text-muted">Laisser vide pour garder le mot de passe actuel</small>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Mettre à jour
                </button>
                <a href="{{ path('app_administrateur_utilisateur_show', {'type': 'etudiant', 'id': etudiant.id}) }}" class="btn btn-light ms-2">
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
