{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">
                <i class="fas fa-tachometer-alt"></i> Tableau de Bord
            </h1>
            {% if app.session.get('logged_in') %}
                <p class="lead">
                    Bienvenue, <strong>{{ app.session.get('user_name') }}</strong> !
                    Vous êtes connecté en tant que <span class="badge bg-primary">{{ app.session.get('user_type')|capitalize }}</span>.
                </p>
            {% endif %}
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card stat-card students">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Étudiants</h6>
                            <h3 class="mb-0">{{ stats.etudiants }}</h3>
                        </div>
                        <div class="icon text-primary">
                            <i class="fas fa-user-graduate fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card teachers">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Enseignants</h6>
                            <h3 class="mb-0">{{ stats.enseignants }}</h3>
                        </div>
                        <div class="icon text-warning">
                            <i class="fas fa-chalkboard-teacher fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card stat-card admins">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Administrateurs</h6>
                            <h3 class="mb-0">{{ stats.administrateurs }}</h3>
                        </div>
                        <div class="icon text-info">
                            <i class="fas fa-user-tie fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-bolt"></i> Actions Rapides</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a href="{{ path('app_etudiant_new') }}" class="btn btn-primary w-100">
                                <i class="fas fa-user-plus me-2"></i> Ajouter un Étudiant
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="{{ path('app_enseignant_new') }}" class="btn btn-warning w-100">
                                <i class="fas fa-user-plus me-2"></i> Ajouter un Enseignant
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a href="{{ path('app_administrateur_new') }}" class="btn btn-info w-100">
                                <i class="fas fa-user-plus me-2"></i> Ajouter un Administrateur
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if not app.session.get('logged_in') %}
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h5><i class="fas fa-exclamation-triangle text-warning"></i> Non connecté</h5>
                        <p>Veuillez vous connecter pour accéder à toutes les fonctionnalités.</p>
                        <a href="{{ path('app_login') }}" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i> Se connecter
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}