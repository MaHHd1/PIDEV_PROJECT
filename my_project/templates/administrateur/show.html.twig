{% extends 'base.html.twig' %}

{% block title %}Détails Administrateur{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-user-tie"></i> Détails de l'Administrateur</h4>
                    <span class="badge bg-{{ administrateur.actif ? 'success' : 'danger' }}">
                    {{ administrateur.actif ? 'ACTIF' : 'INACTIF' }}
                </span>
                </div>
                <div class="card-body">
                    <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-user"></i> Informations Personnelles</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">ID</h6>
                            <p class="h5">#{{ administrateur.id }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Nom Complet</h6>
                            <p class="h5">{{ administrateur.nomComplet }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Email</h6>
                            <p><i class="fas fa-envelope"></i> {{ administrateur.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Téléphone</h6>
                            <p>
                                {% if administrateur.telephone %}
                                    <i class="fas fa-phone"></i> {{ administrateur.telephone }}
                                {% else %}
                                    <span class="text-muted">Non renseigné</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="fas fa-briefcase"></i> Informations Administratives</h5>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Département</h6>
                            <p><span class="badge bg-primary fs-6">{{ administrateur.departement }}</span></p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Fonction</h6>
                            <p class="h6">{{ administrateur.fonction }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Date de Nomination</h6>
                            <p><i class="fas fa-calendar"></i> {{ administrateur.dateNomination|date('d/m/Y H:i') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Date de Création</h6>
                            <p><i class="fas fa-clock"></i> {{ administrateur.dateCreation|date('d/m/Y H:i') }}</p>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_administrateur_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        <div>
                            <a href="{{ path('app_administrateur_edit', {'id': administrateur.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post"
                                  action="{{ path('app_administrateur_delete', {'id': administrateur.id}) }}"
                                  style="display:inline-block;"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet administrateur?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ administrateur.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}