{% extends 'base.html.twig' %}

{% block title %}Nouvel Administrateur{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Cr√©er un Nouvel Administrateur</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-user"></i> Informations Personnelles</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.prenom) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.motDePasse) }}
                        </div>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="fas fa-briefcase"></i> Informations Administratives</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.departement) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.fonction) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.telephone) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                {{ form_widget(form.actif) }}
                                <label class="form-check-label" for="{{ form.actif.vars.id }}">
                                    {{ form.actif.vars.label }}
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_administrateur_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}