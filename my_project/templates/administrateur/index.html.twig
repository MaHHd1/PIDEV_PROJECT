{% extends 'base.html.twig' %}

{% block title %}Liste des Administrateurs{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-user-tie"></i> Liste des Administrateurs</h1>
        <a href="{{ path('app_administrateur_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvel Administrateur
        </a>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-search"></i> Recherche et Filtrage</h5>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_administrateur_index') }}">
                <div class="row">
                    <!-- Recherche globale -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Recherche globale</label>
                        <input type="text"
                               class="form-control"
                               name="keyword"
                               value="{{ criteria.keyword is defined ? criteria.keyword : '' }}"
                               placeholder="Nom, prénom, email, fonction...">
                    </div>

                    <!-- Filtres -->
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Département</label>
                        <select class="form-select" name="departement">
                            <option value="">Tous</option>
                            {% for departement in departements %}
                                <option value="{{ departement }}" {{ (criteria.departement is defined and criteria.departement == departement) ? 'selected' : '' }}>
                                    {{ departement }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label">Statut</label>
                        <select class="form-select" name="actif">
                            <option value="">Tous</option>
                            <option value="1" {{ (criteria.actif is defined and criteria.actif == '1') ? 'selected' : '' }}>Actif</option>
                            <option value="0" {{ (criteria.actif is defined and criteria.actif == '0') ? 'selected' : '' }}>Inactif</option>
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Fonction</label>
                        <input type="text"
                               class="form-control"
                               name="fonction"
                               value="{{ criteria.fonction is defined ? criteria.fonction : '' }}"
                               placeholder="Ex: Directeur">
                    </div>
                </div>

                <!-- Ligne 2 : Tri -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Trier par</label>
                        <select class="form-select" name="sortBy">
                            <option value="nom" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'nom' ? 'selected' : '' }}>Nom</option>
                            <option value="prenom" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'prenom' ? 'selected' : '' }}>Prénom</option>
                            <option value="email" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'email' ? 'selected' : '' }}>Email</option>
                            <option value="departement" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'departement' ? 'selected' : '' }}>Département</option>
                            <option value="fonction" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'fonction' ? 'selected' : '' }}>Fonction</option>
                            <option value="telephone" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'telephone' ? 'selected' : '' }}>Téléphone</option>
                            <option value="dateNomination" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'dateNomination' ? 'selected' : '' }}>Date de nomination</option>
                        </select>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label">Ordre</label>
                        <select class="form-select" name="sortOrder">
                            <option value="ASC" {{ (criteria.sortOrder is defined ? criteria.sortOrder : 'ASC') == 'ASC' ? 'selected' : '' }}>Croissant (A-Z)</option>
                            <option value="DESC" {{ (criteria.sortOrder is defined ? criteria.sortOrder : 'ASC') == 'DESC' ? 'selected' : '' }}>Décroissant (Z-A)</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3 d-flex align-items-end">
                        <div class="btn-group w-100">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Appliquer les filtres
                            </button>
                            <a href="{{ path('app_administrateur_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Réinitialiser
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-body">
            {% if administrateurs is empty %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucun administrateur trouvé.
                </div>
            {% else %}
                <!-- Résumé des résultats -->
                <div class="alert alert-light mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-chart-bar"></i>
                        <strong>{{ administrateurs|length }}</strong> administrateur(s) trouvé(s)
                        {% if criteria.keyword is defined and criteria.keyword %}
                            pour "<em>{{ criteria.keyword }}</em>"
                        {% endif %}
                    </div>
                    <div>
                        <small class="text-muted">
                            Trié par: <strong>{{ (criteria.sortBy is defined ? criteria.sortBy : 'nom')|capitalize }}</strong>
                            ({{ (criteria.sortOrder is defined ? criteria.sortOrder : 'ASC') == 'ASC' ? 'Croissant' : 'Décroissant' }})
                        </small>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nom Complet</th>
                            <th>Email</th>
                            <th>Département</th>
                            <th>Fonction</th>
                            <th>Téléphone</th>
                            <th>Date Nomination</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for administrateur in administrateurs %}
                            <tr>
                                <td><strong>#{{ administrateur.id }}</strong></td>
                                <td>{{ administrateur.nomComplet }}</td>
                                <td>{{ administrateur.email }}</td>
                                <td>
                                    <span class="badge bg-primary">{{ administrateur.departement }}</span>
                                </td>
                                <td>{{ administrateur.fonction }}</td>
                                <td>
                                    {% if administrateur.telephone %}
                                        <i class="fas fa-phone"></i> {{ administrateur.telephone }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>{{ administrateur.dateNomination|date('d/m/Y') }}</td>
                                <td>
                                    {% if administrateur.actif %}
                                        <span class="badge bg-success">Actif</span>
                                    {% else %}
                                        <span class="badge bg-danger">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_administrateur_show', {'id': administrateur.id}) }}"
                                       class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_administrateur_edit', {'id': administrateur.id}) }}"
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_administrateur_delete', {'id': administrateur.id}) }}"
                                          style="display:inline-block;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet administrateur?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ administrateur.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}