{% extends 'base.html.twig' %}

{% block title %}Liste des Enseignants{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-chalkboard-teacher"></i> Liste des Enseignants</h1>
        <a href="{{ path('app_enseignant_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvel Enseignant
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {% if enseignants is empty %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucun enseignant trouvé.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>Matricule</th>
                            <th>Nom Complet</th>
                            <th>Email</th>
                            <th>Spécialité</th>
                            <th>Diplôme</th>
                            <th>Type Contrat</th>
                            <th>Expérience</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for enseignant in enseignants %}
                            <tr>
                                <td><strong>{{ enseignant.matriculeEnseignant }}</strong></td>
                                <td>{{ enseignant.nomComplet }}</td>
                                <td>{{ enseignant.email }}</td>
                                <td>{{ enseignant.specialite }}</td>
                                <td>
                                    <span class="badge bg-info">{{ enseignant.diplome }}</span>
                                </td>
                                <td>
                                    {% if enseignant.typeContrat == 'CDI' %}
                                        <span class="badge bg-success">{{ enseignant.typeContrat }}</span>
                                    {% elseif enseignant.typeContrat == 'Vacataire' %}
                                        <span class="badge bg-warning">{{ enseignant.typeContrat }}</span>
                                    {% else %}
                                        <span class="badge bg-primary">{{ enseignant.typeContrat }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ enseignant.anneesExperience }} ans</td>
                                <td>
                                    {% if enseignant.statut == 'actif' %}
                                        <span class="badge bg-success">Actif</span>
                                    {% elseif enseignant.statut == 'conge' %}
                                        <span class="badge bg-warning">Congé</span>
                                    {% elseif enseignant.statut == 'retraite' %}
                                        <span class="badge bg-info">Retraite</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_enseignant_show', {'id': enseignant.id}) }}"
                                       class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_enseignant_edit', {'id': enseignant.id}) }}"
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_enseignant_delete', {'id': enseignant.id}) }}"
                                          style="display:inline-block;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet enseignant?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ enseignant.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}