{% extends 'base.html.twig' %}

{% block title %}Liste des Enseignants{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-chalkboard-teacher"></i> Liste des Enseignants</h1>
        <a href="{{ path('app_enseignant_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvel Enseignant
        </a>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-search"></i> Recherche et Filtrage</h5>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_enseignant_index') }}">
                <div class="row">
                    <!-- Recherche globale -->
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Recherche globale</label>
                        <input type="text"
                               class="form-control"
                               name="keyword"
                               value="{{ criteria.keyword is defined ? criteria.keyword : '' }}"
                               placeholder="Nom, prénom, email, matricule...">
                    </div>

                    <!-- Filtres -->
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Statut</label>
                        <select class="form-select" name="statut">
                            <option value="">Tous</option>
                            <option value="actif" {{ (criteria.statut is defined and criteria.statut == 'actif') ? 'selected' : '' }}>Actif</option>
                            <option value="inactif" {{ (criteria.statut is defined and criteria.statut == 'inactif') ? 'selected' : '' }}>Inactif</option>
                            <option value="conge" {{ (criteria.statut is defined and criteria.statut == 'conge') ? 'selected' : '' }}>Congé</option>
                            <option value="retraite" {{ (criteria.statut is defined and criteria.statut == 'retraite') ? 'selected' : '' }}>Retraite</option>
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Spécialité</label>
                        <select class="form-select" name="specialite">
                            <option value="">Toutes</option>
                            {% for specialite in specialites %}
                                <option value="{{ specialite }}" {{ (criteria.specialite is defined and criteria.specialite == specialite) ? 'selected' : '' }}>
                                    {{ specialite }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Type de contrat</label>
                        <select class="form-select" name="typeContrat">
                            <option value="">Tous</option>
                            {% for contrat in contrats %}
                                <option value="{{ contrat }}" {{ (criteria.typeContrat is defined and criteria.typeContrat == contrat) ? 'selected' : '' }}>
                                    {{ contrat }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <!-- Ligne 2 : Tri -->
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Trier par</label>
                        <select class="form-select" name="sortBy">
                            <option value="nom" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'nom' ? 'selected' : '' }}>Nom</option>
                            <option value="prenom" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'prenom' ? 'selected' : '' }}>Prénom</option>
                            <option value="email" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'email' ? 'selected' : '' }}>Email</option>
                            <option value="matricule" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'matricule' ? 'selected' : '' }}>Matricule</option>
                            <option value="specialite" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'specialite' ? 'selected' : '' }}>Spécialité</option>
                            <option value="diplome" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'diplome' ? 'selected' : '' }}>Diplôme</option>
                            <option value="experience" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'experience' ? 'selected' : '' }}>Années d'expérience</option>
                            <option value="typeContrat" {{ (criteria.sortBy is defined ? criteria.sortBy : 'nom') == 'typeContrat' ? 'selected' : '' }}>Type de contrat</option>
                        </select>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label">Ordre</label>
                        <select class="form-select" name="sortOrder">
                            <option value="ASC" {{ (criteria.sortOrder is defined ? criteria.sortOrder : 'ASC') == 'ASC' ? 'selected' : '' }}>Croissant (A-Z)</option>
                            <option value="DESC" {{ (criteria.sortOrder is defined ? criteria.sortOrder : 'ASC') == 'DESC' ? 'selected' : '' }}>Décroissant (Z-A)</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3 d-flex align-items-end">
                        <div class="btn-group w-100">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Appliquer les filtres
                            </button>
                            <a href="{{ path('app_enseignant_index') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Réinitialiser
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-body">
            {% if enseignants is empty %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucun enseignant trouvé.
                </div>
            {% else %}
                <!-- Résumé des résultats -->
                <div class="alert alert-light mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-chart-bar"></i>
                        <strong>{{ enseignants|length }}</strong> enseignant(s) trouvé(s)
                        {% if criteria.keyword is defined and criteria.keyword %}
                            pour "<em>{{ criteria.keyword }}</em>"
                        {% endif %}
                    </div>
                    <div>
                        <small class="text-muted">
                            Trié par: <strong>{{ (criteria.sortBy is defined ? criteria.sortBy : 'nom')|capitalize }}</strong>
                            ({{ (criteria.sortOrder is defined ? criteria.sortOrder : 'ASC') == 'ASC' ? 'Croissant' : 'Décroissant' }})
                        </small>
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>Matricule</th>
                            <th>Nom Complet</th>
                            <th>Email</th>
                            <th>Spécialité</th>
                            <th>Diplôme</th>
                            <th>Type Contrat</th>
                            <th>Expérience</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for enseignant in enseignants %}
                            <tr>
                                <td><strong>{{ enseignant.matriculeEnseignant }}</strong></td>
                                <td>{{ enseignant.nomComplet }}</td>
                                <td>{{ enseignant.email }}</td>
                                <td>{{ enseignant.specialite }}</td>
                                <td>
                                    <span class="badge bg-info">{{ enseignant.diplome }}</span>
                                </td>
                                <td>
                                    {% if enseignant.typeContrat == 'CDI' %}
                                        <span class="badge bg-success">{{ enseignant.typeContrat }}</span>
                                    {% elseif enseignant.typeContrat == 'Vacataire' %}
                                        <span class="badge bg-warning">{{ enseignant.typeContrat }}</span>
                                    {% else %}
                                        <span class="badge bg-primary">{{ enseignant.typeContrat }}</span>
                                    {% endif %}
                                </td>
                                <td>{{ enseignant.anneesExperience }} ans</td>
                                <td>
                                    {% if enseignant.statut == 'actif' %}
                                        <span class="badge bg-success">Actif</span>
                                    {% elseif enseignant.statut == 'conge' %}
                                        <span class="badge bg-warning">Congé</span>
                                    {% elseif enseignant.statut == 'retraite' %}
                                        <span class="badge bg-info">Retraite</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Inactif</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_enseignant_show', {'id': enseignant.id}) }}"
                                       class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_enseignant_edit', {'id': enseignant.id}) }}"
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_enseignant_delete', {'id': enseignant.id}) }}"
                                          style="display:inline-block;"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet enseignant?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ enseignant.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}