{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord Enseignant{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Bienvenue, {{ enseignant.prenom }} {{ enseignant.nom }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h5>Vos informations</h5>
                                <ul class="list-group">
                                    <li class="list-group-item"><strong>Email:</strong> {{ enseignant.email }}</li>
                                    <li class="list-group-item"><strong>Spécialité:</strong> {{ enseignant.specialite }}</li>
                                    <li class="list-group-item"><strong>Diplôme:</strong> {{ enseignant.diplome }}</li>
                                    <li class="list-group-item"><strong>Type de contrat:</strong> {{ enseignant.typeContrat }}</li>
                                    <li class="list-group-item"><strong>Années d'expérience:</strong> {{ enseignant.anneesExperience }}</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5>Actions rapides</h5>
                                <div class="d-grid gap-2">
                                    <a href="#" class="btn btn-primary">Gérer mes cours</a>
                                    <a href="#" class="btn btn-secondary">Voir mes étudiants</a>
                                    <a href="#" class="btn btn-info">Modifier mon profil</a>
                                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}