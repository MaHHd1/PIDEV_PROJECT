{% extends 'base.html.twig' %}

{% block title %}Modifier Enseignant{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-user-edit"></i> Modifier l'Enseignant</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}

                    <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-user"></i> Informations Personnelles</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.prenom) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Mot de passe (laisser vide pour ne pas changer)</label>
                            <input type="password" class="form-control" name="motDePasse" placeholder="Nouveau mot de passe">
                        </div>
                    </div>

                    <h5 class="border-bottom pb-2 mb-3 mt-4"><i class="fas fa-graduation-cap"></i> Informations Professionnelles</h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.matriculeEnseignant) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.diplome) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.specialite) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.anneesExperience) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.typeContrat) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.tauxHoraire) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.statut) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.disponibilites) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_enseignant_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour
                        </a>
                        {{ form_widget(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}