{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-key"></i> Réinitialisation du mot de passe
                    </h4>
                </div>
                <div class="card-body">
                    {% if message %}
                        <div class="alert alert-{{ message.type }}">
                            <h5><i class="fas fa-check-circle"></i> Succès</h5>
                            <p>{{ message.text }}</p>
                            {% if message.link %}
                                <div class="alert alert-light">
                                    <strong>Lien de test :</strong><br>
                                    <a href="{{ message.link }}" target="_blank">{{ message.link }}</a>
                                </div>
                            {% endif %}
                            {% if message.note %}
                                <small class="text-muted">{{ message.note }}</small>
                            {% endif %}
                        </div>
                    {% endif %}

                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> {{ error }}
                        </div>
                    {% endif %}

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                <i class="fas fa-info-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <p class="mb-4">
                        Entrez votre adresse email. Nous vous enverrons un lien pour réinitialiser votre mot de passe.
                    </p>

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope"></i> Adresse Email
                            </label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="email"
                                   required
                                   placeholder="exemple@email.com">
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Envoyer le lien de réinitialisation
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a href="{{ path('app_login') }}">
                            <i class="fas fa-arrow-left"></i> Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}