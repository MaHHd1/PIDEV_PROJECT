{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="mb-0">
                        <i class="fas fa-sign-in-alt"></i> Connexion
                    </h4>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> {{ error }}
                        </div>
                    {% endif %}

                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }}">
                                <i class="fas fa-check-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <form method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">
                                <i class="fas fa-envelope"></i> Adresse Email
                            </label>
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   name="email"
                                   value="{{ email }}"
                                   required
                                   placeholder="exemple@email.com">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="fas fa-lock"></i> Mot de passe
                            </label>
                            <input type="password"
                                   class="form-control"
                                   id="password"
                                   name="password"
                                   required
                                   placeholder="Votre mot de passe">
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt"></i> Se connecter
                            </button>
                        </div>

                        <div class="text-center">
                            <a href="{{ path('app_forgot_password') }}">
                                <i class="fas fa-key"></i> Mot de passe oublié ?
                            </a>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> Informations</h6>
                        <p class="mb-0">
                            Seuls les utilisateurs créés par l'administrateur peuvent se connecter.
                            Contactez votre administrateur si vous n'avez pas de compte.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}