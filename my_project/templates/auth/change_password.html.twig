{% extends 'base.html.twig' %}

{% block title %}Change Password - Eduport{% endblock %}

{% block body %}
    <section class="p-0 d-flex align-items-center position-relative overflow-hidden">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-8 mx-auto">
                    <div class="card shadow mt-5">
                        <div class="card-header bg-primary bg-opacity-10 border-bottom">
                            <h4 class="card-header-title mb-0">Change Password</h4>
                        </div>
                        <div class="card-body p-4">
                            <!-- Display messages -->
                            {% if error %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ error }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endif %}

                            {% for flash_error in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ flash_error }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            {% for flash_success in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{ flash_success }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            {% for flash_info in app.flashes('info') %}
                                <div class="alert alert-info alert-dismissible fade show" role="alert">
                                    {{ flash_info }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            <!-- Form -->
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'method': 'post', 'action': path('app_change_password')}}) }}

                            <!-- Current Password -->
                            <div class="mb-4">
                                <label for="{{ form.currentPassword.vars.id }}" class="form-label">Current Password *</label>
                                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control', 'placeholder': 'Enter your current password'}}) }}
                                {{ form_errors(form.currentPassword) }}
                            </div>

                            <!-- New Password -->
                            <div class="mb-4">
                                <label for="{{ form.newPassword.first.vars.id }}" class="form-label">New Password *</label>
                                {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Enter new password'}}) }}
                                <div class="form-text">Minimum 8 characters with at least one uppercase, one lowercase, and one number</div>
                                {{ form_errors(form.newPassword.first) }}
                            </div>

                            <!-- Confirm New Password -->
                            <div class="mb-4">
                                <label for="{{ form.newPassword.second.vars.id }}" class="form-label">Confirm New Password *</label>
                                {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm new password'}}) }}
                                {{ form_errors(form.newPassword.second) }}
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_home') }}" class="btn btn-secondary">Cancel</a>
                                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}